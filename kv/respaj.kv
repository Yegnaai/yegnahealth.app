<RespajScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('respa')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/phb.jpg"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ፕሮስቴት"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ፕሮስቴት uretra ሽንት ከሰውነት ውስጥ የሚያስወጣው ቱቦ የሚከበብ ትንሽ እጢ ነው። እየሰፋ ሲሄድ የሽንት ፍሰትን ሊገድብ ይችላል ይህም ምቾት እና የሽንት ችግር ይፈጥራል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "በተደጋጋሚ የሽንት መሽናት በተለይም በምሽት (nocturia)።\n\n"\
                                        "ደካማ የሽንት ፍሰት ወይም ሽንት ለመጀመር መቸገር።\n\n"\
                                        "በሽንት መጨረሻ ላይ መንጠባጠብ።\n\n"\
                                        "መሽናት ግን ፊኛን ሙሉ በሙሉ ባዶ ማድረግ ይቸግራል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "BPH በዋነኝነት የሚከሰተው በእርጅና እና በሆርሞን ለውጦች ነው።\n\n"\
                                        "እርጅና ከ50 በላይ በሆኑ ወንዶች ላይ በብዛት ይታያል።\n\n"\
                                        "የሆርሞን ለውጥ የቴስቶስትሮን እና የኢስትሮጅንን አለመመጣጠን።\n\n"\
                                        "የቤተሰብ ታሪክ ዘመዶች BPH ካለባቸው ከፍ ያለ ስጋት።\n\n"\
                                        "ውፍረት እና የአካል ብቃት እንቅስቃሴ እጥረት ምልክቶችን ሊያባብስ ይችላል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "BPH ሁልጊዜ መከላከል ባይቻልም የአኗኗር ለውጦች ሊረዱ ይችላሉ።\n\n"\
                                        "ጤናማ ክብደት።\n\n"\
                                        "የደም ዝውውርን ለማሻሻል አዘውትሮ የአካል ብቃት እንቅስቃሴ ያድርጉ።\n\n"\
                                        "የስኳር ህመም እና የልብ ህመምን መቆጣጠር።\n\n"\
                                        "ሽንትን ለረጅም ጊዜ ከመያዝ ይቆጠቡ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
