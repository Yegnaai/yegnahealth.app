<AsthmabScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    # Header Section
                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('asthma')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    # Scrollable Content Section
                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/gn.jpg"

                                  

                                MDLabel:
                                    text: "\nሳይነስ"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center" 

                                MDLabel:
                                    text: 
                                        "\nሳይነስ በፈትና በጭንቅላት አጥንት ውስጥ የሚገኙ የተፈጥሮ ክፍተቶች(sinuses) በአላርጀክ ወይም በተለያዩ ኢንፊክሽን ምክናት የሚከሰት ብግነት ነው።\n\n"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center" 

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "የሳይነስ ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "13dp"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የአፍንጫ መታፈን ወይም መዘጋት።\n\n"\
                                        "ወፍራም ፣ ቢጫ ወይም አረንጓዴ ንፍጥ\n\n"\
                                        "የፊት ህመም ወይም ግፊት፣ ብዙ ጊዜ በአይን፣ በአፍንጫ ወይም በግንባር አካባቢ።\n\n"\
                                        "ማሽተት አለመቻል።"\
                                        "ትኩሳት (በባክቴሪያ የ sinusitis)።\n\n" \
                                        "ራስ ምታት ወይም የጥርስ ሕመም።\n\n"                              
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#አጋላጭ ሁኔታዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የጉንፋን ወቅቶች ፡- ቫይረሶች የሳይነስ ኢንፌክሽንን ሊያስከትሉ ይችላሉ።\n\n"\
                                        "አካባቢያዊ ምክንያቶች ፡- የተበከለ አየር፣ ጭስ ወይም ጠንካራ ኬሚካሎች።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "የመከላከያ ዘዴዎች:-"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "አለርጂዎችን መቆጣጠር።\n\n"\
                                        "በሽታ የመከላከል አቅምን ማሳደግ።\n\n"\
                                        "የተመጣጠነ አመጋገብ እና መደበኛ የአካል ብቃት እንቅስቃሴ ያድርጉ።\n\n"\
                                        "ለጭስ ፣ ለአቧራ እና ለሌሎች የሚያበሳጩ ነገሮች ከመጋለጥ ይቆጠቡ።\n\n"\
                                        "ለበለጠ ሕክምና ወደ ሆስፒታል ያምሩ!!\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                
                                