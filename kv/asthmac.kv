<AsthmacScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    # Header Section
                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('asthma')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    # Scrollable Content Section
                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/yem.jpg"



                                MDLabel:
                                    text: "\nየሳንባ ምች"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center" 

                                MDLabel:
                                    text:"\nበተለያዩ ኢንፈክሸን አምጨ ተህዋሳን ባክቴረያ ቫይረስ እንደሁም በዕድ አካላት ወድ ሳንባችን ሰገብ የምከሰት የሳንባ ብግነት ነው።\n\n"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center" 

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#የሳንባ ምች ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "13dp"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "አክታ ያለው ሳል ትኩሳትና ላብ።\n\n"\
                                        "የትንፋሽ እጥረትና በምተነፈሱ ወይም በሳል ወቀት የሚባባስ የደረት ህመም።"\
                                        "ድካም ማቅለሽለሽ ፣ ማስታወክ ወይም ተቅማጥ።\n\n"\
                                        "ግራ መጋባት (በተለይ በአዋቂዎች)።\n\n"                               
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#አጋላጭ ሁኔታዎች፦"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ከተጠቁ ሰዎች ጋር የቅርብ ግንኙነት።\n\n"\
                                        "የተዳከመ የበሽታ መቋቋም ስርዓት።\n\n"\
                                        "የመተንፈሻ አካላት ህመሞች እንደ አስም ወይም (COPD)።\n\n"\
                                        "አካባቢያዊ ሁኔታዎች  ለምሳሌ ለተበከለ አይየረ መጋለጥ ፣ መርዛማ ጭስ ወይም ሰጋራ ማጨስ።\n\n"     
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#የመከላከያ ዘዴዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የሳንባ ምች ክትባቶች መከተብ።\n\n"\
                                        "የኢንፍሉዌንዛ ክትባት መከተብ የቫይረስ የሳምባ ምች ስጋትን ለመቀነስ።\n\n"\
                                        "በተደጋጋሚ እጅን በሳሙና እና በውሃ መታጠብ።\n\n"\
                                        "በሚያስሉበት ጊዜ አፍ እና መሸፈን።\n\n"\
                                        "ማጨስ ወይም ለሲጋራ ጭስ ከመጋለጥ መቆጠብ።\n\n"\
                                        "በሽታ የመከላከል አቅምን ለመጨመር ሚዛናዊ የሆነ አመጋገብ እና የአካል ብቃት እንቅስቃሴ ማድረግ።\n\n"\
                                        "ከታመሙ ሰዎች ጋር የቅርብ ግንኙነትን ያሶግዱ።\n\n"\
                                        "ከፍተኛ ተጋላጭነት ባለባቸው አካባቢዎች በተለይም በጉንፋን ወቅት ጭምብል ይጠቀሙ።\n\n"\
                                        "ለበለጠ ሕክምና ወደ ሆስፒታል ያምሩ!!\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0

                    
            
                        
                    
            