<RespaiScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('respa')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/ctm.jpg"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ያልወርድ የወንድ የዘር ፍሬ"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ክሪፕቶርኪዲዝም ከመወለዱ በፊት አንድ ወይም ሁለቱም የወንድ የዘር ፍሬ ወደ ክሮም ሳይወርድ የሚቀርበት ሁኔታ ነው።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "አንድ ወይም ሁለቱም የወንድ የዘር ፍሬዎች ጠፍተዋል።\n\n"\
                                        "በቆለጥ ውስጥ እብጠት።\n\n"\
                                        "Scrotum ትንሽ ወይም ያልተስተካከለ ይመስላል። ብዙ ጊዜ ህመም የሌለው ግን የመራባት ችግሮች በኋለኛው ህይወት ያሰከትላል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ትክክለኛው መንስኤ ምን እንደሆነ አይታወቅም, ነገር ግን በርካታ ምክንያቶች አስተዋጽኦ ሊያደርጉ ይችላሉ:-\n\n"\
                                        "በእርግዝና ወቅት የሆርሞን መዛባት።\n\n"\
                                        "ያለጊዜው መወለድ ከ 37 ሳምንታት በፊት የተወለዱ ሕፃናት ከፍተኛ ተጋላጭ ናቸው።\n\n"\
                                        "ዝቅተኛ የልደት ክብደት።\n\n"\
                                        "የዘረመል ምክንያቶች የቤተሰብ ታሪክ የክሪፕቶርኪዲዝም ወይም የብልት መዛባት።\n\n"\
                                        "የእናቶች ማጨስ ፣ አልኮል መጠጣት ወይም በእርግዝና ወቅት ለኬሚካሎች መጋለጥ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "በእርግዝና ወቅት ማጨስን እና አልኮልን አለመጠጣት።\n\n"\
                                        "ከእርግዝና በፊት የስኳር በሽታ ወይም ሌሎች የጤና ሁኔታዎችን መቆጣጠር።\n\n"\
                                        "ጤናማ አመጋገብ የፅንስ እድገትን ለመደገፍ።\n\n"\
                                        "ለአካባቢያዊ መርዞች ፀረ-ተባይ ፣ ኬሚካል ፣ ወዘተ መጋለጥን ማስወገድ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
