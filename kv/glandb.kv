<GlandbScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'
                    
                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}
                        
                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('gland')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()  

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/enkirt.jpg"
                                    
                                MDLabel:
                                    text:
                                        "\n"\
                                        "#የእንቀርት እጢ"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    #text:"የታይሮይድ ካንሰር በታይሮይድ እጢ ውስጥ ያልተለመዱ ሴሎች ሲያድጉ በአንገቱ ላይ የሚገኘው የቢራቢሮ ቅርጽ ያለው እጢ ሲሆን ይህም ሜታቦሊዝምን ፣ የልብ ምትን እና የሆርሞንን ምርትን ይቆጣጠራል።\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "16sp"
                                    halign: 'center'
                                    theme_text_color: "Hint"
                                    adaptive_height: True
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "#የእንቀርት እጢ መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    #text:
                                        #"\n"\ 
                                        #"የታይሮይድ ካንሰር ትክክለኛ መንስኤ አይታወቅም ነገር ግን አንዳንድ የአደጋ ምክንያቶች የሚከተሉትን ያካትታሉ :-።\n\n"\
                                        #"የዘረመል ሚውቴሽን  - በዘር የሚተላለፉ ሁኔታዎች አደጋን ሊጨምሩ ይችላሉ።\n\n"\
                                        #"ለጨረር መጋለጥ  - ያለፈ የጨረር ሕክምና ወደ ጭንቅላት ወይም አንገት።\n\n"\
                                        #"በአመጋገብ ውስጥ የአዮዲን እጥረት።\n\n"\
                                        #"የታይሮይድ ካንሰር ወይም የታይሮይድ በሽታ ያለባቸው ዘመዶች መኖር።\n\n"\
                                        #"ሥር የሰደደ የታይሮይድ እብጠት - እንደ ሃሺሞቶ ታይሮዳይተስ ያሉ ሁኔታዎች አደጋን ሊጨምሩ ይችላሉ።\n\n"        
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#የእንቀርት እጢ ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        #"\n"\
                                        #"በአንገት ላይ እብጠት።\n\n"\
                                        #"ጩኸት ወይም የድምፅ ለውጦች።\n\n"\
                                        #"የመዋጥ ወይም የመተንፈስ ችግር።\n\n"\
                                        #"የማያቋርጥ የጉሮሮ ወይም የአንገት ህመም።\n\n"\
                                        #"ድብርት፣ የስሜት መለዋወጥ እና ጭንቀት።\n\n"\

                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "10dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "መከላከያ ዘዴዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                                       
                                MDLabel:
                                    text:
                                        #"\n"\
                                        #"አዮዲን የተቀላቀለበት ጨው የተመጣጠነ አመጋገብ አንዳንድ ችግሮችን ለመከላከል ይረዳል።\n\n"\
                                        #"የአንገት ምርመራ  - አስቀድሞ ማወቅ የሕክምና ስኬትን ያሻሽላል።\n\n"\
                                        #"አላስፈላጊ የጨረር መጋለጥን ያስወግዱ  - በተለይ በልጅነት ጊዜ።\n\n"\
                                        #"የዘረመል ምርመራ - የታይሮይድ ካንሰር በቤተሰብ ውስጥ ካለ።\n\n"\
                                        #"ጤናማ የአኗኗር ዘይቤን ይከታተሉ - የተመጣጠነ አመጋገብ እና የአካል ብቃት እንቅስቃሴ ማደረግ።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0