<RespaeScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('respa')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/bacv.jpg"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ባክቴሪያል ቫጋኖሲስ (BV)"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ባክቴሪያል ቫጋኖሲስ (BV) በሴት ብልት ውስጥ በሚፈጠር የባክቴሪያ ሚዛን መዛባት ምክንያት የሚከሰት የተለመደ የሴት ብልት ኢንፌክሽን ነው። በተለምዶ የሴት ብልት ጥሩ እና ጎጂ ባክቴሪያዎች አለው ነገር ግን ጎጂ ባክቴሪያዎች ሲበዙ ወደ BV ይመራል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ቀጭን ፣ ግራጫ ወይም ነጭ የሴት ብልት ፈሳሽ።\n\n"\
                                        "ጠንካራ ፣ የብልት ጠረን (በተለይ ከወሲብ በኋላ)።\n\n"\
                                        "ማሳከክ ወይም ቁጣ ብልት አካባቢ።\n\n"\
                                        "በሽንት ጊዜ የማቃጠል ስሜት።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የሴት ብልት ባክቴሪያ አለመመጣጠን ጥሩ ባክቴሪያ መቀነስ እና ሌሎች ጎጂ ባክቴሪያዎች መጨመር።\n\n"\
                                        "በርካታ የወሲብ አጋሮች ተጋላጭነትን ይጨምራል።\n\n"\
                                        "መዓዛ ያላቸው የሴቶች ንፅህና መጠበቂያ ምርቶችን መጠቀም።\n\n"\
                                        "ማጨስ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "መዓዛ ያላቸውን የሴት ምርቶችን ያስወግዱ።\n\n"\
                                        "ደህንነቱ የተጠበቀ የግብረ ሥጋ ግንኙነትን ይለማመዱ (ኮንዶም ይጠቀሙ)።\n\n"\
                                        "የብልት ንጽህናን መጠበቅ።\n\n"\
                                        "በፕሮቲዮቲክስ የበለጸጉ ምግቦችን (እርጎ) ይመገቡ።\n\n"\
                                        "ጤናማ አመጋገብ እና የአኗኗር ዘይቤ ፡- በሽታ የመከላከል ስርዓትን ያጠናክራል ኢንፌክሽኖችን ለመዋጋት ይርዳል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "የባክቴሪያ ቫጊኖሲስ (BV) ተፈጥሯዊ መፍትሄዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የተፈጥሮ መድኃኒቶች ምልክቶችን ለማስታገስ እና ዳግም እንዳይከሰት ለመከላከል ይረዳሉ።\n\n"\
                                        "የኮኮናት ዘይት :- \n\n"\
                                        "የኮኮናት ዘይት በተጎዳው አካባቢ ይቀቡ ✅ በተጨማሪም በቀን 1 የሾርባ ማንኪያ መመገብ በሽታ የመከላከል አቅምን ይጨምራል።\n\n"\
                                        "ነጭ ሽንኩርት (የተፈጥሮ ፀረ-ባክቴሪያ ተወካይ):-\n\n"\
                                        "በየቀኑ 1-2 ነጭ ሽንኩርት ይመገቡ።" 
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "ሀኪምን መቼ ማግኘት ይቻላል?"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ምልክቶቹ ከአንድ ሳምንት በላይ ከቀጠሉ ፣ ከተባባሱ።\n\n"\
                                        "በቅርብ ቀን በተሻለ አግልግሎት ይጠብቁን።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"