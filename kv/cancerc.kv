<CancercScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    # Header Section
                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('cancer')
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    # Scrollable Content Section
                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/yem.jpg"
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"  

                                    MDLabel:
                                        text: 
                                            "\n\n"\
                                            "Platelet Disorder"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text: 
                                        #"\n"\
                                        #"የደም ብዛት ሰውነት ብዙ የቀይ ደም ሴሎችን (RBCs) እንደያመነጭ ያደርጋል ፤ ይህም ደሙን ያወፍራል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#Platelet Disorder ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "13dp"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        #"\n"\ 
                                        #"ራስ ምታት እና ማዞር።\n\n"\
                                        #"የደበዘዘ እይታ።\n\n"\
                                        #"የቆዳ ማሳከክ (በተለይ ከሞቅ ሻወር በኋላ)።\n\n"\
                                        #"ማዞር ወይም ራስ ምታት"\
                                        #"ድካም እና የትንፋሽ ማጠር።\n\n"\
                                        #"የእጅ እና የእግር መደንዘዝ ወይም መወጠር።\n\n"\
                                        #"ለደም መርጋት ፣ ለስትሮክ እና ለልብ ድካም ተጋላጭነት ይጨምራል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#Platelet Disorder ምክንያቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        #"\n"\
                                        #"የዘረመል ሚውቴሽን።\n\n"\
                                        #"ሥር የሰደደ የሳንባ በሽታ(COPD)።\n\n"\
                                        #"ከመጠን ያለፈ የኢፒኦ ምርት (በኩላሊት እጢዎች  ላይ የደም ዶፒንግ ምክንያት።)\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        #"\n"\
                                        #"መደበኛ የደም ምርመራዎች።\n\n"\
                                        #"ለደም መፍሰስ አደጋ ከተጋለጡ ደምን የሚያነቃቁ መድኃኒቶችን ያስወግዱ።\n\n"\
                                        #"ጤናማ የአኗኗር ዘይቤን ይኑሮት አመጋገብ ፣ የአካል ብቃት እንቅስቃሴ።\n\n"\
                                        #"ከደም ህክምና ባለሙያ ጋር ይማከሩ።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                            
                    
            
                        
                    
            