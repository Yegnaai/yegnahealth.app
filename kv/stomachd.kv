<StomachdScreen>:
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('stomach')
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/hamtete.jpg"

                            

                                MDLabel:
                                    text:"\nየአሞት ጠጠረ"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "center"  

                                MDLabel:
                                    text: 
                                        "\n"\
                                        "በአሞት ከረጢት ውስጥ የሚፈጠሩ ጠጣር ቅንጣቶች ሲሆኑ ከጉበት ሥር ያለ ትንሽ የአካል ክፍል አሞትን የሚያከማች ነው።"\
                                        "የአሞት ጠጠር የሚፈጠረው አሞት ብዙ ኮሌስትሮል ፣ ብዙ (bilirubin) ወይም በቂ ያልሆነ የአሞት ጨው ሲይዝ ፣ ይህም ወደ የአሞት ጠጠረ ያመራል።\n\n"
                                    
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#የአሞት ጠጠረ ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "13dp"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ብዙ የአሞት ጠጠር ምንም ምልክት የላቸውም ነገር ግን ምልክታዊ ጉዳዮች የሚከተሉትን ሊያካትቱ ይችላሉ።\n\n"\
                                        "ድንገተኛ በላይኛው ቀኝ ሆድ ወይም በሆድ መሃል ላይ ከባድ ህመም።\n\n"\
                                        "ህመም ብዙውን ጊዜ ወደ ቀኝ ትከሻ ወይም ከጀርባ።\n\n"\
                                        "ማቅለሽለሽ እና ማስታወክ።\n\n"\
                                        "የምግብ አለመፈጨት ወይም እብጠት።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#አጋላጭ ሁነታ"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "በአሞት ከረጢት ውስጥ የአሞት መቀዛቀዝ።\n\n"\
                                        "ኢንፌክሽን ወይም ብግነት በሰውነት ውስጥ የ(biliary) ሥርዓት መከናውን።\n\n"\
                                        "የአሞት ጠጠር የቤተሰብ ታሪክ።\n\n"\
                                        "ከመጠን ያለፈ ውፍረት ወይም ፈጣን ክብደት መቀነስ።\n\n"\
                                        "ከፍተኛ ቅባት ያለው ከፍተኛ የኮሌስትሮል ምግቦች መመግብ።\n\n"\
                                        "አንዳንድ የሕክምና ሁኔታዎች (ለምሳሌ :- የስኳር በሽታ የጉበት በሽታ)።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ዝቅተኛ ስብ ፣ ከፍተኛ ፋይበር መመገብ።\n\n"\
                                        "ፍራፍሬ እና አትክልትን ያካትቱ የአናኗር ዘድ መከተል።\n\n"\
                                        "ከመጠን በላይ ክብደትን ቀስ በቀስ መቀነስ።\n\n"\
                                        "መደበኛ የአካል ብቃት እንቅስቃሴ ማደረግ።\n\n"\
                                        "የምግብ መፈጨትን ለመርዳት ብዙ ውሃ ይጠጡ።\n\n"\
                                        "ከፍተኛ አደጋ ካጋጠማቸው (ለምሳሌ እርጉዝ ሴቶች ወይም የቤተሰብ ታሪክ ያላቸው) መደበኛ ምርመራዎች ማደረግ።\n\n"\
                                        "ለአሞት ጠጠር ፈጣን ምርመራ እና ተገቢ ህክምና ሲደረግ ፣ እንደ ኢንፌክሽን ወይም የቢል ቱቦ መዘጋት ያሉ ከባድ ችግሮችን የመቀነስ እድልን ይጨምል።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"