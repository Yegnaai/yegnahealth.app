<BabyaScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('baby')

                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/pne.jpg"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "*የሳንባ ምች"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የሳንባ ምች የሳንባ ኢንፌክሽን በአንድ ወይም በሁለቱም ሳንባዎች ውስጥ የአየር ከረጢቶች (አልቪዮሊ) እብጠት ያስከትላል። የአየር ከረጢቶቹ በፈሳሽ ወይም መግል ሊሞሉ ይችላሉ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "እንደ መንስኤ ፣ እድሜ እና አጠቃላይ ጤና ላይ በመመስረት ምልክቶቹ ከቀላል እስከ ከባድ ሊለያዩ ይችላሉ:-\n\n"\
                                        "ሳል ንፍጥ ወይም አክታን ያለው።\n\n"\
                                        "ትኩሳት እና ብርድ ብርድ ማለት።\n\n"\
                                        "የትንፋሽ ማጠር በተለይ በእንቅስቃሴ ወቅት።\n\n"\
                                        "የደረት ህመም በጥልቅ በሚተነፍሱበት ወይም በሚያስሉበት ጊዜ እየባሰ ይሄዳል።\n\n"\
                                        "በጡት ውስጥ ያለ እብጠት።\n\n"\
                                        "ድካም እና የምግብ ፍላጎት ማጣት\n\n"\
                                        "ከከንፈሮች ወይም ከጣት ጫፎች በኦክስጅን እጥረት የተነሳ ከባድ ጉዳዮች።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "በባክቴሪያ የሚከሰት የሳምባ ምች\n\n"\
                                        "የፈንገስ የሳምባ ምች በሽታ የመከላከል አቅማቸው በተዳከመባቸው ሰዎች ላይ በጣም የተለመደ ነው።\n\n"\
                                        "በጣም ወጣት (ጨቅላ) ወይም አዛውንት መሆን።\n\n"\
                                        "የጡት ንፅህና ጉድለት\n\n"\
                                        "#ማጨስ የበሽታ ተጋላጭነትን ይጨምራል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"



                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "መከተብ (የሳንባ ምች እና የጉንፋን ክትባቶች)።\n\n"\
                                        "✅ንጽህናን መከተል እጅ መታጠብ ፣ ሳል ማስነጠስን በምኖርበት ግዜ አፍንና አፍንጭን መሸፈን።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "በህክምና ባለሞያ መታየት"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
