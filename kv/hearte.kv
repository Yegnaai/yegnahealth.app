<HearteScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('heart')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/hw.jpg"
                                                       
                                
                                MDLabel:
                                    text:
                                        "\nየውልድት ልብ ህመም"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center"  
                                
                                MDLabel:
                                    text: "\nየወልድት የልብ ሕመም (CHD) የሚያመለክተው ህፃናት ስውለዱ የልብ መዋቅራዊ ጉድለቶችን ነው።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "14dp"
                                    halign: 'center'
                                    theme_text_color: "Hint"
                                    adaptive_height: True
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ፈጥነት የተሞላበት አተነፋፋስ።\n\n"\
                                        "ሕፃናት ውስጥ ድካምና ደካማ አመጋገብ።\n\n"\
                                        "በእግር ፣ በሆድ ወይም በአይን አካባቢ እብጠት።\n\n"\
                                        "የልብ ማጉረምረም (ያልተለመዱ የልብ ድምፆች)።\n\n"                                 
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎችና አገላጭ ሁኔታዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የዘር መዛባቶች (ለምሳሌ ዳውን ሲንድሮም)።\n\n"\
                                        "በእርግዝና ወቅት የእናቶች ኢንፌክሽን (እንደ ኩፍኝ)።\n\n"\
                                        "በእርግዝና ወቅት የስኳር በሽታ ወይም ከቁጥጥር ውጭ የሆነ የደም ስኳር።\n\n"\
                                        "በእርግዝና ወቅት አልኮል እና አደንዛዥ ዕፅ መጠቀም።\n\n"\
                                        "በማህፀን ውስጥ ለጎጂ መድሃኒቶች ወይም ለጨረር መጋለጥ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ቅድመ ወሊድ እንክብካቤ መደበኛ የእርግዝና ምርመራዎች።\n\n"\
                                        "ከእርግዝና በፊት የኩፍኝ መከላከያ ክትባት።\n\n"\
                                        "በእርግዝና ወቅት አልኮልን፣ አደንዛዥ እጾችን እና ጎጂ መድሃኒቶችን ያስወግዱ።\n\n"\
                                        "ማጨስ እና ከመጠን በላይ አልኮልን መጠጣት ያስወግዱ።\n\n"\
                                        "በነፍሰ ጡር እናቶች ላይ የስኳር በሽታ እና የደም ግፊትን መቆጣጠር።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"