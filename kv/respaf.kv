<RespafScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('respa')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/spg.jpg"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ሳልፒንጊትስ"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ሳልፒንጊትስ የወሊድ ቱቦዎች ኢንፌክሽን እና እብጠት ሲሆን ብዙውን ጊዜ በባክቴሪያ የሚከሰት ነው። ካልታከመ መካን ልያደርግ ይችላል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የታችኛው የሆድ ህመም (ከቀላል እስከ ከባድ)።\n\n"\
                                        "ያልተለመደ የሴት ብልት ፈሳሽ (ቢጫ / አረንጓዴ ፣ መጥፎ ጠረን)።\n\n"\
                                        "የሚያሰቃይ ሽንት።\n\n"\
                                        "በግንኙነት ጊዜ ህመም።\n\n"\
                                        "መደበኛ ያልሆነ የወር አበባ መከሰት።\n\n"\
                                        "ትኩሳት እና ብርድ ብርድ ማለት (ኢንፌክሽኑ ከተስፋፋ)።\n\n"\
                                        "ማቅለሽለሽ ወይም ማስታወክ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ሳልፒንጊቲስ አብዛኛውን ጊዜ የሚከሰተው በባክቴሪያል ኢንፌክሽኖች ሲሆን ከእነዚህም ውስጥ ፡-\n\n"\
                                        "በጾታዊ ግንኙነት የሚተላለፉ ኢንፌክሽኖች (ክላሚዲያ ፣ ጨብጥ)።\n\n"\
                                        "ከሴት ብልት ወይም ከማህጸን ጫፍ የሚመጡ የባክቴሪያ ኢንፌክሽኖች።\n\n"\
                                        "ከቀዶ ጥገና በኋላ የሚመጡ ኢንፌክሽኖች ፅንስ ካስወገዱ ወይም ከወሊድ በኋላ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ደህንነቱ የተጠበቀ የግብረ ሥጋ ግንኙነትን ይለማመዱ (ኮንዶም ይጠቀሙ)።\n\n"\
                                        "መደበኛ የአባላዘር በሽታ ምርመራ።\n\n"\
                                        "ጥሩ ንጽህና።\n\n"\
                                        "ማንኛውም አይነት የኢንፌክሽን ምልክት ካጋጠመዎት በፍጥነት ዶክተር ያማክሩ።\n\n"\
                                        "የቅድሚያ ምርመራ እና ህክምና ወሳኝ ናቸው! በታችኛው የሆድ ክፍል ህመም ፣ ያልተለመደ ፈሳሽ ወይም ትኩሳት ካጋጠመዎት በአፋጣኝ ሐኪም ያማክሩ እንደ መካንነት ወይም ሥር የሰደደ የዳሌ ህመም ያሉ ችግሮችን ለማስወገድ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
