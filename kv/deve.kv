<DeveScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(16)

                  
        MDBoxLayout:
            adaptive_height: True
            padding: dp(4)
            spacing: dp(4)

            MDIconButton:
                icon: "arrow-left"
                user_font_size: "24sp"
                on_release: app.switch_to_screen("dev")
        MDCard:
            size_hint: None, None
            size: "300dp", "350dp"
            elevation: 5
            radius: [20,]
            pos_hint: {"center_x": 0.5}
            #padding: dp(10)
            #md_bg_color: 1, 1, 1, 1  # White card background for contrast
            

            FloatLayout:
                FitImage:
                    source: "assets/dev/s.jpg"
                    size_hint: 1, 1
                    fit_mode: 'cover'
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "y": 0.1}
                    #size_hint: None, None
                    elevation: 8
                    #padding: dp(10)
                    radius: [18,]


        # üß† Name Tag
        MDLabel:
            text: "S   I   R   A   W   D   I   N   K"
            bold: True
            halign: "center"
            font_style: "H6"
            size_hint_y: None
            height: dp(30)
            font_name: "assets/fonts/Tintsl.ttf"

        # üìù Bio Section (üî• Rewritten label_1)
        ScrollView:
            MDGridLayout:
                cols: 1
                adaptive_height: True
                padding: dp(10)
                spacing: dp(8)

                MDLabel:
                    id: label_1
                    text: "Drop out Developer Hey I'm Sirawdink! With 7+ years of experience in mobile and web development, I specialize in building scalable and impactful solutions.Expertise in Python, KivyMD, Flask, and PyGame I focus on creating clean, efficient architecture for MVPs that make a difference.Let's collaborate and build the future with code! üî•"
                    markup: True
                    font_name: "assets/fonts/Abyssinica.ttf"
                    font_size: dp(15)
                    size_hint_y: None
                    height: self.texture_size[1]
                    #halign: "justify"
                    theme_text_color: "Primary"
                    line_height: 1.25
                    adaptive_height: True
                
                # Skills Section (using MDChip with correct 'text' property)


        # üì¨ Connect Section
        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            padding: dp(10)
            spacing: dp(10)
            pos_hint: {"center_x": 0.5}

            MDLabel:
                text: "Let‚Äôs Stay in Touch!"
                font_style: "H6"
                halign: "center"

            MDBoxLayout:
                adaptive_height: True
                spacing: dp(20)
                pos_hint: {"center_x": 0.5}

                # Telegram
                MDIconButton:
                    icon: "send-circle-outline"
                    user_font_size: "32sp"
                    theme_text_color: "Custom"
                    text_color: 0.1, 0.7, 1, 1
                    on_release: root.open_url("https://t.me/Sirawdinks")
                
                MDIconButton:
                    icon: "github"
                    user_font_size: "24sp"
                    on_release: root.open_url("https://yegnaai.github.io/portfolio.web.app-/")
                
                MDIconButton:
                    icon: "gmail"
                    user_font_size: "28sp"
                    theme_text_color: "Custom"
                    text_color: 1, 0, 0, 1  # Red Color
                    on_release: root.open_url("mailto:Yegnaai@gmail.com")
