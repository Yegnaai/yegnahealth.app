<StomacheScreen>:
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('stomach')
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/gubetca.jpg"

                                
                                MDLabel:
                                    text:"\nየጉበት ካንሰር"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center"

                                MDLabel:
                                    text:"\nየጉበት ካንሰር የሚያመለክተው በጉበት ውስጥ የሚመነጩ ወይም ወደ ጉበት የሚተላለፉ አደገኛ ዕጢዎችን ነው። የጉበት ካንሰር ከራሳቸው የጉበት ሴሎች ሊነሱ ወይም ከሌሎች የሰውነት ክፍሎች በተሰራጨ ካንሰር ሊመጣ ይችላል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#የጉበት ካንሰር ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "13dp"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የመጀመሪያ ደረጃዎች ብዙውን ጊዜ ምንም ምልክት የለውም።\n\n"\
                                        "ያልታወቀ ክብደት መቀነስ።\n\n"\
                                        "የምግብ ፍላጎት ማጣት ወይም በፍጥነት የመርካት ስሜት።\n\n"\
                                        "የላይኛው የሆድ ህመም ወይም እብጠት።\n\n"\
                                        "ቢጫ ቀለም የቆዳ እና የዓይን ቢጫ መሆን።\n\n"\
                                        "የድካም ስሜት ማቅለሽለሽ እና ማስታወክ።\n\n"\
                                        "በእግር እና በእግር ጣቆች ላይ እብጠት።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#አጋላጭ ሁነታ"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ሥር የሰደደ የጉበት በሽታ ከሄፐታይተስ ቢ ወይም ሲ ፣ የአልኮል የጉበት በሽታ፣ ወይም አልኮሆል ያልሆነ የሳንባና የጉበት በሽታ።\n\n"\
                                        "ጉበት ካንሰር የቤተሰብ ታሪክ።\n\n"\
                                        "የስኳር በሽታ እና ከመጠን በላይ ውፍረት።\n\n"\
                                        "ከመጠን በላይ አልኮል መጠጣት።\n\n"\
                                        "ለመርዝ መጋለጥ (ለምሳሌ በ(aflatoxins) የተበከሉ ምግቦች)መመግብ።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ሄፓታይተስን መከላከል።\n\n"\
                                        "ደህንነቱ የተጠበቀ የግብረ ሥጋ ግንኙነትን ይለማመዱ እና መርፌዎችን ከመጋራት ይቆጠቡ።\n\n"\
                                        "ከመጠን በላይ መጠጣትን ያስወግዱ።\n\n"\
                                        "በመደበኛነት የአካል ብቃት እንቅስቃሴ ያድርጉ እና የስኳር በሽታን ይቆጣጠሩ።\n\n"\
                                        "ለአፍላቶክሲን ተጋላጭነትን ይቀንሱ ምግብን በአግባቡ ያከማቹ።\n\n"\
                                        "የጉበት ካንሰርን ቀደም ብሎ ማወቁ ውጤቱን በእጅጉ ያሻሽላል ሕክምናው ይበልጥ ውጤታማ የሚሆነው ካንሰሩ ሲታወቅ እና ጉበት መደበኛ ሥራውን ሲይዝ ነው። በተለይ ለከፍተኛ አደጋ ተጋላጭ ለሆኑ ሰዎች መደበኛ የጤና ክትትል ትልቅ ቁልፍ ነው።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"