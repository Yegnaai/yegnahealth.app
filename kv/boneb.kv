<BonebScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'
                    
                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}
                        
                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('bone')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/foot.jpg"
                                    
                                MDLabel:
                                    text:"\nየእግር ህመም"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center"  
                                
                                MDLabel:
                                    text:"\nየእግር ችግሮች የተለመዱ ናቸው። እና በአካል ጉዳት፣ ከመጠን በላይ መጠቀም ወይም የጤና ሁኔታዎች ልሆኑ ይችላሉ።\n"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center"  
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "#የእፅዋት ፋሲስቲስ(Plantar Fasciitis)"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ችግር : የእፅዋት ፋሲያ እብጠት ፣ በእግሩ ግርጌ ላይ የሚሮጥ ወፍራም ቲሹ።\n\n"\
                                        "ምልክቶች:-\n\n"\
                                        "ተረከዝ ህመም በተለይም በማለዳ።\n\n"\
                                        "ከረዥም ጊዜ እረፍት በኋላ ጥንካሬ ወይም ህመም።\n\n"\
                                        "መፍትሄ:-\n\n"\
                                        "እረፍት እና በረዶ :- እንቅስቃሴን ይቀንሱ እና በረዶን ተረከዙ ላይ ይተግብሩ።\n\n"\
                                        "ደጋፊ ጫማ :- ጥሩ ቅስት ድጋፍ እና ትራስ ጫማ ያላቸው ጫማዎች።\n\n"\
                                        "አካላዊ ሕክምና :- የእግር መካኒኮችን ለማሻሻል እና ውጥረትን ለመቀነስ።\n\n"
                                
                                    
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "ቡኒዎች(Bunions)"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ችግር :- በትልቁ የእግር ጣት ስር ያለ የአጥንት እብጠት በመገጣጠሚያው የተሳሳተ አቀማመጥ ምክንያት የሚከሰት።\n\n"\
                                        "ምልክቶች:-\n\n"\
                                        "በትልቁ እግር ግርጌ ላይ ህመም እና እብጠት።\n\n"\
                                        "በህመም ምክንያት ጫማ የመልበስ ችግር።\n\n"\
                                        "መፍትሄ :-\n\n"\
                                        "ትክክለኛ ጫማ መጫማት ፥ በቡንዮን ላይ ያለውን ጫና ለመቀነስ ሰፊ የእግር ጣት ሳጥን ያለው ጫማ ያድርጉ።\n\n"\
                                        "ቀዶ ጥገና ፥ ከባድ በሆኑ ጉዳዮች ላይ፣ መገጣጠሚያውን ለማስተካከል ቀዶ ጥገና ሊያስፈልግ ይችላል።\n\n"

                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "10dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "አኩሌስ ቴንዲኒተስ(Achilles Tendinitis)"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                                       
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ችግር ፡ በተረከዝ ጅማት ላር እብጠት።\n\n"\
                                        "ምልክቶች :-\n\n"\
                                        "በተረከዙ ጀርባ ላይ ህመም እና ጥንካሬ።\n\n"\
                                        "እብጠት እና ርህራሄ።\n\n"\
                                        "መፍትሄ :- \n\n"\
                                        "እረፍት እና በረዶ ፥ እንቅስቃሴን ይቀንሱ እና በአካባቢው ላይ በረዶ ይተግብሩ።\n\n"\
                                        "መዘርጋት ፥ እግረን በመዘርጋትና በማጠፍ ጅማትን ለማጠናከር ልምምድ ማደርግ።\n\n"\
                                        "አካላዊ ሕክምና :- በጅማት ላይ ያለውን ጫና ለመቀነስ እና ተለዋዋጭነትን ለማሻሻል።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "ሪህ"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                    
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ችግር፡- በመገጣጠሚያዎች ውስጥ የዩሪክ አሲድ ክሪስታሎች በመከማቸት የሚፈጠር የአርትራይተስ አይነት ሲሆን ብዙ ጊዜ በትልቁ የእግር ጣት ላይ ጉዳት ያደርሳል።\n\n"\
                                        "ምልክቶች :-\n\n"\
                                        "በትልቁ የእግር ጣት መገጣጠሚያ ላይ ድንገተኛ፣ ከባድ ህመም።\n\n"\
                                        "እብጠት, መቅላት እና ሙቀት።\n\n"\
                                        "መፍትሄ :-\n\n"\
                                        "መድሀኒት ፡- ፀረ-ብግነት መድሀኒቶች እና የዩሪክ አሲድ መጠንን ለመቀነስ መድሃኒቶች።\n\n"\
                                        "የአመጋገብ ለውጦች ፡- በፕዩሪን የበለጸጉ ምግቦችን (ቀይ ሥጋ፣ ሼልፊሽ) ፍጆታን ይቀንሱ።\n\n"\
                                        "ሃይድሬሽን :- ዩሪክ አሲድ ለማውጣት እንዲረዳው ብዙ ውሃ ይጠጡ።\n\n"\
                                        "እረፍት ፥ በእግር ጎዞ ወቀት ወይም በማንኛውም ጊዜ ክብደትን የሚጨምሩ እንቅስቃሴዎችን ያስወግዱ።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0


                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"
                                    
                                    MDLabel:
                                        text: "ተረከዝ"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"


                                MDLabel:
                                    text:
                                        "\n"\
                                        "ከእፅዋት ፋሲሺየስ ጋር ተያይዞ ተረከዙ አጥንት ላይ የሚፈጠር የአጥንት እድገት።\n\n"\
                                        "ምልክቶች :-\n\n"\
                                        "ተረከዝ ላይ ህመም በተለይም በእግር በምቆምበት ጊዜ።\n\n"\
                                        "ከእግር በታች ያለው ርህራሄ።\n\n"\
                                        "መፍትሄ ፡-\n\n"\
                                        "እረፍት እና በረዶ፥ እብጠትን ለመቀነስ።\n\n"\
                                        "ቀዶ ጥገና በቋሚ ሁኔታዎች ውስጥ ቀዶ ጥገና ሊያስፈልግ ይችላል።\n\n"\
                                        "ለዘለቄታው ወይም ለከባድ ምልክቶች የረጅም ጊዜ ጉዳትን ለማስወገድ የጤና አጠባበቅ ባለሙያን ማማከር አስፈላጊ ነው።\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
