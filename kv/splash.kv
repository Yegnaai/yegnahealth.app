<SplashScreen>:
    name: "splash"

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(5)
        padding: dp(10)

        # Image section
        MDCard:
            size_hint: None, None
            size: "200dp", "220dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            padding: dp(8)
            elevation: 1

            FitImage:
                id: logo
                source: "assets/splash/llogo.jpg"
                size_hint: None, None
                size: "190dp", "189dp"

        # Text section
        ScrollView:
            MDGridLayout:
                cols: 1
                adaptive_height: True
                padding: dp(13)
                spacing: dp(22)

                MDLabel:
                    id: label_1
                    text: "YEGNA Health እባላለሁ የግል ሀኪሞ ነኝ ጤና ምንድን ነው?"
                    font_name: "assets/fonts/Tintsl.ttf"
                    font_size: dp(15)
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    bold: True
                    opacity: 0


                MDLabel:
                    id: label_2
                    text:
                        "በአለም ጤናጥበቃ ድርጅት(World Health Organization) አተረጓገም መሠረት ጤንነት ማለት ሙሉ የሆነ የአካል ፡ የስነልቦናዊ ፡ እና የማህበረሰብአዊ ደህንነት ነው፡፡\n\n"\
                        "ስለዚህም በሽታ ማለት የማንኛውንም ግለሰብ የአካል ፡ የስነልቦናዊ ፡ ወይም የማህበረሰብአዊ ደህንነትን የሚያቃውስ ሁኔታ ማለት ነው ተብሎ ሊወሰድ ይችላል።\n\n"\
                        "በሽታዎችን ቀድሞ ማወቅ እና መከላከል ጤናማ ህይወትን ለመምራት ትልቅ ሚና ይጫወታል! ለመድሀኒትና ለህክምና የምናወጣው ገንዘብና ጊዜ የህይወታችንን ሰፊ ድረሻ ይዛል፡፡\n\n"

                    font_name: "assets/fonts/Abyssinica.ttf"
                    font_size: sp(14)
                    #halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    opacity: 0



                MDLabel:
                    id: label_3
                    text:
                        "የማህበረሰቡን የጤና ሁኔታ ወደተሻለ ደረጃ ለማድረስ በግንዛቤ እጥረት ሊፈፅሟቸው የሚችሏቸው የጤና ጉዳት የሚያስከትሉ ልምዶችን አስቀድሞ ለመከላከል እና በሰውነትም ላይ የሚያስተውሏቸውን ለውጦች በመከታተል ሊደርስ ከሚችል የጤና ችግር ራስን አስቀድሞ ለመከላከል YEGNA Health ተሰራ፡፡\n\n"
                    font_name: "assets/fonts/Abyssinica.ttf"
                    font_size: dp(14)
                    #halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    opacity: 0

                MDLabel:
                    id: label_4
                    text:  "ጥንቃቀ በዚህ አፕልከሸን ላይ ያሉ መረጃዎች በፍፁም ህክምና ቦታወችን እና ዶክቶሮችን አይተካም ፥ ይህ አፕልከሸን ለቅደመ ጥንቃቀና ከህመም በፊት ጥንቃቄን እንድናደርግ ግንዛቤ እንደኖረን ተሰራ፡፡\n\n\n\n\n\n"
                    font_name: "assets/fonts/Abyssinica.ttf"
                    font_size: dp(14)
                    #halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    opacity: 0

        MDIconButton:
            icon: "arrow-right"
            size_hint: None, None
            size: dp(48), dp(48)
            pos_hint: {"center_x": .85, "center_y": .59}
            on_release: app.switch_to_screen('main')
            elevation_normal: 1


