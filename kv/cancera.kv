<CanceraScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    # Header Section
                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('cancer')
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    # Scrollable Content Section
                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/anemia.jpg"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"  

                                    MDLabel:
                                        text: 
                                            "\n"\
                                            "#ደም ማነስ"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text: 
                                        "\n"\
                                        "ደም ማነስ የደም መታወክ ነው። ሰውነት በቂ ጤነኛ ቀይ የደም ሴሎች (አርቢሲዎች) ወይም ሄሞግሎቢን ከሌለው ኦክሲጅንን በብቃት መሸከም አይችልም።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#የደም ማነስ ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "13dp"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ድካም።\n\n"\
                                        "የገረጣ ወይም ቢጫ ቀለም ያለው ቆዳ።\n\n"\
                                        "የትንፋሽ ማጠር።\n\n"\
                                        "ማዞር ወይም ራስ ምታት"\
                                        "ቀዝቃዛ እጆች እና እግሮች።\n\n"\
                                        "ፈጣን ወይም መደበኛ ያልሆነ የልብ ምት።\n\n"\
                                        "የደረት ህመም (በከባድ ሁኔታ)።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#የደም ማነስ መከላከያ መንገዶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የአመጋገብ ለውጦች (ለ Iron እና ቫይታሚን እጥረት)\n\n"\
                                        "በ Iron የበለጸጉ ምግቦች - ቀይ ሥጋ ፣ ስፒናች ፣ ምስር ፣ ባቄላ።\n\n"\
                                        "የቫይታሚን B12 ምንጮች  - እንቁላል ፣ የወተት ተዋጽኦ፣ አሳ እና ስጋ።\n\n"\
                                        "ቫይታሚን ሲ - Iron ን ለመምጠጥ ይረዳል (በብርቱካን ፣ ቲማቲም እና በርበሬ ውስጥ ይገኛል።\n\n"\
                                        "መደበኛ ምርመራ ያድርጉ።\n\n"\
                                        "ከመጠን ያለፈ ካፌይን ያስወግዱ (የ Iron መጠጥን ይቀንሳል)።\n\n"\
                                        "የደም ማነስን የሚያስከትሉ የጤና እክሎችን ማከም።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                            
                    
            
                        
                    
            