<FoodcScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                BoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'horizontal'
                        adaptive_height: True
                        padding: "2dp", 0, "2dp", 0
                        pos_hint: {"center_y": .92}
                        adaptive_height: True

                        MDCard:
                            size_hint: 0.9, None  
                            height: "220dp"
                            orientation: "vertical"
                            elevation: 4
                            FitImage:
                                source: "assets/food/mango.png"
                                size_hint_y: None
                                height: "280dp"
                                radius: [12, 12, 0, 0]
                            MDLabel:
                                text: "ማንጎ ወይም የማንጎ ጁስ"
                                font_name: "assets/fonts/Yeshuah.ttf"
                                bold: True
                                font_size: "19sp"
                                theme_text_color: "Secondary"
                                halign: "center"
                                valign: "center"
                                adaptive_height: True
                    MDIconButton:
                        icon: "close"
                        md_bg_color: 1, 1, 1, .6
                        x: 12
                        pos_hint: {"top": .99}
                        on_release: app.switch_to_screen('food')
                        adaptive_height: True

                    ScrollView:
                        MDList:
                            padding: [10, 0, 20, 0]

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "ማንጎ-፣"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "#የጤና ጥቅሞች፡-"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"

                            MDLabel:
                                text:
                                    "\n"\ 
                                    "#በሽታ መከላከል"\
                                    "ቫይታሚን ሲ የሰውነትን በሽታ የመከላከል አቅም ከፍ የሚያደርግ ከመሆኑም በላይ ሰውነታችን ኢንፌክሽንን እንዲከላከል ይረዳል።\n\n"\
                                    "ቫይታሚን ኤ - የሰውነትን በሽታ የመከላከል አቅም ጤንነት ይደግፋል።\n\n"\
                                    "የየቆዳ እና የፀጉር ጤና\n\n"\
                                    "አንቲኦክሲደንት ቆዳን ከኦክሲዴቲቭ(oxidative) ጉዳት ይጠብቁ።\n\n"\
                                    "#የቆዳ እና የፀጉር ጤና-"\
                                    "ቫይታሚን ኢ እና ሲ እነዚህ ቫይታሚኖች ሴሎችን ከኦክሲዴቲቭ(oxidative) ጉዳት በመጠበቅ ጤናማ ቆዳና ፀጉርን እንደኖረን ያደሪጋል"\
                                    "#የአይን ጤና\n\n"\
                                    "ቫይታሚን ኤ ለጥሩ የማየት ና ለዓይን ጤንነት አስፈላጊ ነው።\n\n"
                                                              
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"