<BabyfScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('baby')

                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/ton.jpg"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የቶንሲል"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የቶንሲል እብጠት ሲሆን እነዚህ ሁለት ሞላላ ቅርጽ ያላቸው እጢዎች በጉሮሮ ጀርባ ላይ ይገኛሉ። በአብዛኛው የሚከሰተው በቫይረስ ወይም በባክቴሪያ የሚመጡ ኢንፌክሽኖች ሲሆን ይህም እንደ የጉሮሮ መቁሰል ፣ ትኩሳት እና የመዋጥ መቸገር ምልክቶችን ያስከትላል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "13dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ብዙውን ጊዜ ከባድ የጉሮሮ ህመም።\n\n"\
                                        "የመዋጥ ችግር።\n\n"\
                                        "ቀይ ያበጠ ፣ ቶንሲል አንዳንድ ጊዜ ነጭ ነጠብጣቦች ወይም መግል።\n\n"\
                                        "ትኩሳት እና ብርድ ብርድ ማለት።\n\n"\
                                        "መጥፎ የአፍ ጠረን።\n\n"\
                                        "በአንገት ላይ ያበጡ ሊምፍ ኖዶች።\n\n"\
                                        "የጆሮ ህመምና ራስ ምታት።\n\n"\
                                        "የማቅለሽለሽ ወይም የታፈነ ድምጽ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ቫይረሶች (በጣም የተለመደ ምክንያት - 70%\n\n"\
                                        "ኢንፍሉዌንዛ (የፍሉ ቫይረስ)\n\n"\
                                        "Rhinovirus (የተለመደ ጉንፋን)።\n\n"\
                                        "የቶንሲል በሽታ በጣም ተላላፊ ነው እና በሚከተሉት መንገዶች ይተላለፋል።\n\n"\
                                        "ማሳል፣ ማስነጠስ ወይም ማውራት** (በአየር ላይ ያሉ ጠብታዎች)።\n\n"\
                                        "እቃዎች ፣ መጠጦች ወይም የጥርስ ብሩሾች መጋራት።\n\n"\
                                        "የተበከሉ ቦታዎችን መንካት እና ከዚያም አፍ ወይም አፍንጫን መንካት።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"



                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የቶንሲል በሽታ እንዳይዛመት ወይም እንዳይዛመት:-\n\n"\
                                        "በተደጋጋሚ እጅን በሳሙና እና በውሃ ይታጠቡ።\n\n"\
                                        "ምግብን ፣ መጠጦችን ወይም ዕቃዎችን ከመጋራት ይቆጠቡ።\n\n"\
                                        "በሚያስሉበት ጊዜ አፍዎን ይሸፍኑ።\n\n"\
                                        "ከበሽታ በኋላ የጥርስ ብሩሽን ይተኩ።\n\n"\
                                        "በሽታን የመከላከል አቅምን ያሳድጉ ፡ ጤናማ ምግብ ይመገቡ ፣ በቂ እንቅልፍ ያግኙ እና ውሃ አብዘቶ ይጠጡ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "በህክምና ባለሞያ መታየት"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ከ3 ቀን በላይ የሚቆይ ከባድ የጉሮሮ ህመም።\n\n"\
                                        "የመተንፈስ ወይም የመዋጥ ችግር።\n\n"\
                                        "ከፍተኛ ትኩሳት (ከ39°ሴ በላይ ወይም ከ102°F በላይ)።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

