<StomachaScreen>:
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('stomach')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/anjk.jpg"

                                  

                                MDLabel:
                                    text:"\nየአንጀት ቁስለት"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center"  

                                MDLabel:
                                    text:"\nበጨጓራና አንጀት ላይ እብጠት የሚያስከትሉ ሥር የሰደዱ በሽታዎች ያመለክታል። እነዚህ በሽታዎች መደበኛውን የምግብ መፈጨትን ሊያበላሹ እና ወደ ከፍተኛ ውስብስብ ችግሮች ልፋጥሩ ይችላሉ።\n\n"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center"  

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#የአንጀት ቁስለት ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "13dp"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የሆድ ህመም እና ቁርጠት።\n\n"\
                                        "ተቅማጥ ድካም።\n\n"\
                                        "ክብደት መቀነስ እና የምግብ ፍላጎት መቀነስ።\n\n"\
                                        "ከፊንጢጣ የምፍስ ደም።\n\n"\
                                        "መጸዳዳት ወይም ሰገራ ለማፍን መቸገር።\n\n"\
                                        "የመገጣጠሚያ ህመም ወይም አርትራይተስ።\n\n"                               
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#አጋላጭ ሁነታ"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ጄኔቲክስ የ(IBD) የቤተሰብ ታሪክ አደጋን ይጨምራል።\n\n"\
                                        "የበሽታ መከላከል ስርዓት መዛባት።\n\n"\
                                        "ከፍተኛ ቅባት ያላቸው ምግቦች።\n\n"\
                                        "ማጨስ (በተለይ ለ ክሮንስ በሽታ) ያጋልጣል።\n\n"\
                                        "አንዳንድ ባክቴሪያዎች ወይም ቫይረሶች ለተዛባ የበሽታ መቋቋም ምላሽ አስተዋጽኦ ሊያደርጉ ይችላሉ።\n\n"\
                                        "ውጥረት  ቀጥተኛ መንስኤ ባይሆንም ምልክቶችን ሊያባብስ ይችላል።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "በሰውነቶ ውስጥ በቅ ፍሳሽ ይኑሮት።\n\n"\
                                        "ህመም ምያስከትሉ ምግቦችን ይለዩ።\n\n"\
                                        "ማጨስ ማቆም።\n\n"\
                                        "ጭንቀትን በጥንቃቄ ወይም በሕክምና ይቆጣጠሩ።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"