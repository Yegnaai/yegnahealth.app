<RespahScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('respa')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/vac.jpg"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "Varicocele"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ቫሪኮሴል በእግር ውስጥ ካለው (varicose) ደም መላሽ ቧንቧዎች ጋር ተመሳሳይነት ያለው የደም ሥር (ቧንቧዎች)ነው። (pampiniform plexus) የሚባለውን የደም ሥር ከቆለጥ ውስጥ የሚያፈስስ የደም ሥር መረብን ይጎዳል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ብዙ ወንዶች የህመም ምልክቶች አይታይባቸውም ፣ ነገር ግን ሲታመሙ ፣ የሚከተሉትን ሊያካትቱ ይችላሉ።\n\n"\
                                        "በቆለጥ ውስጥ እብጠት።\n\n"\
                                        "የሚታዩ ወይም የተስፋፉ ደም መላሽ ቧንቧዎች።\n\n"\
                                        "የመራባት ችግሮች ዝቅተኛ የወንድ የዘር መጠን ፣ ደካማ የወንድ የዘር እንቅስቃሴ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የደም ፍሰት ሲስተጓጎል።\n\n"\
                                        "በ crotum ውስጥ ግፊት መጨመር በተለይም በግራ በኩል።\n\n"\
                                        "የጄኔቲክ ቅድመ-ዝንባሌ የ varicose ደም መላሾች የቤተሰብ ታሪክ።\n\n"\
                                        "በብዛት በጉርምስና ዕድሜ ላይ የሚገኙ ወጣቶች እና ወጣት አዋቂ ወንዶች እድሜ 15-25።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "varicoceleን ለመከላከል ምንም ዋስትና ያለው መንገድ የለም ፣ ነገር ግን እነዚህ ምክሮች ሊረዱዎት ይችላሉ።\n\n"\
                                        "የብልትን ጤና መጠበቅ ራስን መመርመር።\n\n"\
                                        "የደም ዝውውረን ለመደገፍ ውሀን በብዛት መጠጣት እና ሚዛናዊ የሆነ አመጋገብ ይከተሉ።\n\n"\
                                        "የሰውነትን ክብደት መቆጣጠር የደም ሥር ጫናን ለመቀነስ።\n\n"\
                                        "የደም ዝውውርን ሊገድቡ የሚችሉ ጥብቆ ልብሶችን ያስወግዱ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
