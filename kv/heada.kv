<HeadaScreen>:
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    # Header Section
                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('head')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    # Scrollable Content Section
                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/ear.jpg"

                            MDLabel:
                                text: "የመካከለኛ ጆሮ ኢንፌክሽን(otitis media)"
                                bold: True
                                halign: 'center'
                                adaptive_height: True
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13dp"  


                            MDLabel:
                                text: 
                                    "ማንኛውም ሰው በመሃከለኛ ጆሮ ኢንፌክሽን ሊይዝ ይችላል ነገር ግን ከስድስት እስከ 15 ወር እድሜ ያላቸው ህጻናት በብዛት ይጠቃሉ።\n\n"                          
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13dp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                                padding: "11dp"

                            

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "የመሃከለኛ ጆሮ ኢንፌክሽን ምልክቶች"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "justify" 
                    


                            MDLabel:
                                text: 
                                    "በአብዛኛዎቹ አጋጣሚዎች የመሃከለኛ ጆሮ ኢንፌክሽን ምልክቶች በፍጥነት ያድጋሉ እና በጥቂት ቀናት ውስጥ ይጠፋሉ። ሆኖም ግን :-\n\n"\ 
                                    "የመሃከለኛው ጆሮ በፈሳሽ ከተሞላ ፣ የመስማት ችግር የ(glue ear) ምልክት ሊሆን ይችላል ፣ በተጨማሪም otitis media with effusion በመባልም ይታወቃል።\n\n"\
                                    "የጆሮ ህመም ፣ ከፍተኛ ሙቀት(ትኩሳት) ፣ የኃይል እጥረት\n\n"\
                                    "በአንዳንድ ሁኔታዎች በጆሮ ታምቡር ውስጥ ቀዳዳ ሊፈጠር ይችላል እና መግል ከጆሮው ውስጥ ሊወጣ ይችላል።\n\n"
                                
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13dp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                                padding: "11dp"
                                halign: "left"

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "በትናንሽ ልጆች ላይ ምልክቶች"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "justify"



                            MDLabel:
                                text: 
                                    "ህፃናት የህመማቸውን ምንጭ ማሳወቅ ስለማይችሉ ለመናገር አስቸጋሪ ሊሆን ይችላል። አንድ ትንሽ ልጅ የጆሮ ኢንፌክሽን እንዳለበት የሚያሳዩ ምልክቶች የሚከተሉትን ያካትታሉ።\n\n"\ 
                                    "ጆሮዎቻቸውን መጎተት ወይም ማሻሸት።\n\n"\
                                    "ብስጭት, ደካማ አመጋገብ ወይም እረፍት ማጣት።\n\n"\
                                    "ማሳል ወይም የአፍንጫ ፍሳሽ እና ተቅማጥ።\n\n"\
                                    "ለድምፆች ምላሽ አለመስጠት ወይም ሌሎች የመስማት ችግር ምልክቶች ለምሳሌ ትኩረት ማጣትና ሚዛን መሳት ናቸው።\n\n"
                                
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13dp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                                padding: "11dp"
                                halign: "left"


                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "ህክምና መቼ ያግኙ"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "justify"  
                            

                            MDLabel:
                                text: 
                                    "ከሁለት ወይም ከሶስት ቀናት በኋላ የመሻሻል ምልክት የማያሳዩ ከሆነ እና ብዙ ሥቃይ ካለባችው።\n\n"\
                                    "ከጆሮ የሚወጣ መግል ወይም ፈሳሽ አንዳንድ ሰዎች ለረጅም ወራት የሚቆይ የማያቋርጥ እና ህመም የሌለበት የጆሮ ፈሳሾች ያዳብራሉ።\n\n"\
                                    "ይህም ሥር የሰደደ (suppurative otitis media) በመባል ይታወቃል።\n\n" 
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13dp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                                padding: "11dp"
                                halign: "left"

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "የመሃከለኛ ጆሮ ኢንፌክሽን በቤት ውስጥ ማከም"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "justify" 
                            
                            

                            MDLabel:
                                text: 
                                    "አብዛኛዎቹ የጆሮ ኢንፌክሽኖች ከሶስት እስከ አምስት ቀናት ውስጥ ይጠፋሉ እና የተለየ ህክምና አያስፈልጋቸውም።\n\n"\
                                    "አስፈላጊ ከሆነ ፓራሲታሞል ወይም ibuprofen ህመምን እና ከፍተኛ ሙቀትን ለማስታገስ ጥቅም ላይ መዋል ይቻላል።\n\n"\
                                    "ለልጅዎ የሚሰጡት ማንኛቸውም የህመም ማስታገሻዎች ከዕድሜያቸው ጋር የሚስማሙ መሆናቸውን ያረጋግጡ።\n\n" 
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13dp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                                padding: "11dp"
                                halign: "left"

                            
                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "የመሃከለኛ ጆሮ ኢንፌክሽን መንስኤ ምንድን ነው?"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "justify"

                            
                            MDLabel:
                                text: 
                                    "አብዛኛዎቹ የመሃከለኛ ጆሮ ኢንፌክሽኖች የሚከሰቱት እንደ ጉንፋን ባሉ ኢንፌክሽን ነው የ(Eustachian tube) ከመካከለኛው ጆሮ እስከ አፍንጫው ጀርባ የሚሄድ ቀጭን ቱቦ ሲያብጥ ይከሰታል። ይህ ማለት ንፍጥ በትክክል ሊወጣ አይችልም። ይህም ኢንፌክሽን ወደ መሃከለኛ ጆሮ በቀላሉ እንዲሰራጭ ያደርገዋል።\n\n"\
                                    "ትንንሽ ልጆች በተለይ ለመካከለኛው ጆሮ ኢንፌክሽን ተጋላጭ ናቸው።\n\n"\
                                    "አንዳንድ ሁኔታዎች የመሃከለኛ ጆሮ ኢንፌክሽኖች አደጋን ሊጨምሩ ይችላሉ ፣ ከእነዚህም መካከል።\n\n"\
                                    "1. የላንቃ መሰንጠቅ\n\n"\
                                    "2. የዘረመል ሁኔታ\n\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13dp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                                padding: "11dp"
                                halign: "left"


                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "የመሃከለኛ ጆሮ ኢንፌክሽኖችን መከላከል ይቻላል??"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "justify"



                            MDLabel:
                                text: 
                                    "የመሃከለኛ ጆሮ ኢንፌክሽኖችን መከላከል አይቻልም ነገር ግን ልታደርጋቸው የምትችላቸው አንዳንድ ነገሮች አሉ።\n\n"\
                                    "ልጅዎን ማስከተብ።\n\n"\
                                    "ልጅዎን ለሲጋራ ጭስ ከማጋለጥ ይቆጠቡ።\n\n"\
                                    "ልጅዎን በጀርባው ተኝቶ እያለ አይመግቡ።\n\n"\
                                    "ከሌሎች ጤናማ ካልሆኑ ልጆች ጋር ንክኪ አለማድረግ ልጅዎን ወደ መካከለኛ ጆሮ ኢንፌክሽን ሊያመራ በሚችል ኢንፌክሽን የመያዝ እድልን ይቀንሳል።\n\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13dp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                                padding: "11dp"
                                halign: "left"
                            

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "የመሃከለኛ ጆሮ ኢንፌክሽኖች ተጨማሪ ችግሮች!"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "justify"


                            MDLabel:
                                text: 
                                    "የመሃከለኛ ጆሮ ኢንፌክሽኖች ውስብስቦች በጣም ጥቂት ናቸው ፣ ግን ከተከሰቱ ከባድ ሊሆኑ ይችላሉ።\n\n"\
                                    "ከጆሮ ጀርባ አጥንት (mastoiditis)፣\n\n"\
                                    "የውስጥ ጆሮ (labyrinthitis)\n\n"\
                                    "በአንጎል እና በአከርካሪ ገመድ ዙሪያ ያሉ መከላከያ ሽፋኖች ማጅራት ገትር (meningitis)\n\n"\
                                    "እነዚህ ከተከሰቱ ወዲያውኑ በሆስፒታል ውስጥ በአንቲባዮቲክስ መድሃኒቶች መታከም አለባቸው።\n\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13dp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                                padding: "11dp"
                                halign: "left"