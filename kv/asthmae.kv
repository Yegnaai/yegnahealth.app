<AsthmaeScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    # Header Section
                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('asthma')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    # Scrollable Content Section
                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/tb.jpg"
                                

                            

                                MDLabel:
                                    text:("\n#የሳንባ ነቀርሳ (ቲቢ)")
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center"  


                                MDLabel:
                                    text:"\nየሚከሰተው ማይኮባክቲሪየም ቲዩበርክሎዝስ በተባለ ባክቴሪያ ሲሆን በተለምዶ ሳንባን ይጎዳል ነገር ግን ሌሎች የሰውነት ክፍሎችንም ሊጎዳ ይችላል። ቲቢ በአየር ውስጥ ይተላለፋል ንቁ ቲቢ ያለበት ሰው ሲያስል ወይም ሲያስነጥስ ባክቴሪያውን ወደ አየር በመልቀቅ ወደለሎች ስዎች ልተላለፍ ይችላል።\n\n"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center" 

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#ሳንባ ነቀርሳ (ቲቢ) ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"


                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "#የማያቋርጥ ሳል ለሶስት ሳምንታት ወይም ከዚያ በላይ የሚቆይ።\n\n"\
                                        "#የደረት ህመም ሰቃይ ያለው መተንፈስ ወይም ደም ማሳል።\n\n"\
                                        "#የድካም ስሜት።\n\n"\
                                        "#ያልታውቅ ድንገትተኛ ክብደት መቀነስ።\n\n"\
                                        "#ትኩሳት ብዙ ጊዜ ዝቅተኛ ደረጃ በምሽት ከመጠን በላይ ላብ።\n\n"\
                                        "#ብርድ ብርድ ማለት በድንገት ቅዝቃዜ እና መንቀጥቀጥ።\n\n"
                                                        
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#አጋላጭ ሁኔታዎች፡"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"

                                    

                                MDLabel:
                                    text:
                                        "\n"\
                                        "#ከተጠቁ ግለሰቦች ጋር የቅርብ ግንኙነት ፡ ንቁ ቲቢ ላለበት ሰው ለረጅም ጊዜ መጋለጥ።\n\n"\
                                        "#የተዳከመ የበሽታ መከላከል ስርዓት ፡ እንደ ኤች አይ ቪ/ኤድስ ፣ ስኳር በሽታ ፣ ወይም በነዝህ በሽታ መያዝ።\n\n"\
                                        "#ከፍተኛ ስጋት ባለባቸው ቦታዎች መኖር ወይም መሥራት ፡ እንደ እስር ቤቶች ፣ ቤት አልባ መጠለያዎች ፣ ወይም ከፍተኛ የቲቢ ስርጭት ባለባቸው አገሮች መህድ።\n\n"\
                                        "#የተመጣጠነ የምግብ እጥረት በሽታ የመከላከል አቅምን ያዳክማል።\n\n"\
                                        "#ንጥረ ነገር አላግባብ መጠቀም ፡ አልኮሆል ወይም የደም ሥር እጽ መጠቀም።\n\n"\
                                        "#አንዳንድ የሕክምና ሁኔታዎች ፡ እንደ ሥር የሰደደ የኩላሊት በሽታ።\n\n"

                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "10dp", 0, "20dp", 0
                                    

                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#የመከላከያ እርምጃዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"


                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "#ክትባት በልጆች ላይ ከባድ የቲቢ ዓይነቶችን ይከላከላል።\n\n"\
                                        "#መደበኛ ምርመራ በተለይ ለአደጋ ተጋላጭ ለሆኑ ቡድኖች ለምሳሌ የጤና እንክብካቤ ሰራተኞች ፣ ኤችአይቪ ያለባቸው ሰዎች እና ቲቢ ካለበት ሰው ጋር የቅርብ ግንኙነት ለነበራቸው።\n\n"\
                                        "#ጤናማ የአኗኗር ዘይቤ አመጋገብ ፣ መደበኛ የአካል ብቃት እንቅስቃሴ በማድረግ እና ማጨስን እና እፅን አላግባብ መጠቀምን በማስወገድ ጠንካራ የመከላከል ስርዓትን መግንባት።\n\n"\
                                        "#የተጨናነቁ ቦታዎችን ማስወገድ በተለይ ከፍተኛ የቲቢ በሽታ ባለባቸው አካባቢዎች አስፈላጊ ነው።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

