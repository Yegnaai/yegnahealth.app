<FoodaScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                BoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'horizontal'
                        adaptive_height: True
                        padding: "2dp", 0, "2dp", 0
                        pos_hint: {"center_y": .92}
                        adaptive_height: True

                        MDCard:
                            size_hint: 0.9, None  
                            height: "220dp"
                            orientation: "vertical"
                            elevation: 4
                            FitImage:
                                source: "assets/food/banana.png"
                                size_hint_y: None
                                height: "280dp"
                                radius: [12, 12, 0, 0]
                            MDLabel:
                                text: "ሙዝ ወይም የሙዝ ጁስ"
                                font_name: "assets/fonts/Yeshuah.ttf"
                                bold: True
                                font_size: "19sp"
                                theme_text_color: "Secondary"
                                halign: "center"
                                valign: "center"
                                adaptive_height: True
                    MDIconButton:
                        icon: "close"
                        md_bg_color: 1, 1, 1, .6
                        x: 12
                        pos_hint: {"top": .99}
                        on_release: app.switch_to_screen('food')
                        adaptive_height: True

                    ScrollView:
                        MDList:
                            padding: [10, 0, 20, 0]

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text:("#ሙዝ፡-በጣም አስፈላጊ የሆኑ ንጥረ ነገሮች በብዛት የሚገኝበት ምንጭ ነው::")
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"


                            MDLabel:
                                text: 
                                    "ምሳሌ፣"\
                                    "ቪታሚኖች- ቫይታሚን ሲ ፣ ቫይታሚን ቢ6 እና አነስተኛ መጠን ያለው ቫይታሚን ኤ ፣ ኢ እና ኬ\n"\
                                    "ማዕድን፦ ፖታሲየም ና ማግኒዝየም ፋይበርን ጨምሮ\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "#የጤና ጥቅሞች፡-"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"

                            MDLabel:
                                text:
                                    "\n"\ 
                                    "#የልብ ጤናር፡-"\
                                    "ፖታሲየም- ሙዝ ለልብ ጤንነት ወሳኝ በሆነው ከፍተኛ የፖታሲየም ይዘታቸው ይታወቃሉ።\n\n"\
                                    "ፖታሲየም- የደም ግፊትን ለመቆጣጠር የሚረዳ ከመሆኑም በላይ ተገቢውን የልብ አሠራር ያከናውናል።\፡-"\
                                    "ፋይበር- በሙዝ ውስጥ ያለው ቃጫ የኮሌስትሮል መጠንን ለመቀነስ፣ የልብ ጤንነትን ይበልጥ ለመደገፍ ይረዳል።\n\n"\
                                    "#የምግብ መፈጨት ጤንነት-"\
                                    "ሙዝ (fructooligosaccharides) የያዘ ሲሆን ይህም ጠቃሚ የሆኑ የሆድ ዕቃ ባክቴሪያዎች እንዲያድጉ ያደሪጋል።\n\n"\
                                    "#ኃይል ማጎልበት-"\
                                    "የተፈጥሮ ስኳር፦ ሙዝ እንደ ግሉኮስ፣ fructose እና sucrose ያሉ የተፈጥሮ ስኳሮች በፍጥነት እንዲመነጭ ያደርጋል\n"\
                                    "ይህ ደግሞ በተለይ ከአካል ብቃት እንቅስቃሴ በፊት ወይም በኋላ ኃይል ማጎልበት የሚያስችል በጣም ግሩም የሆነ ስኳር ነው።\n\n"\
                                    "#የስሜት ና የአዕምሮ ጤና-\n"\
                                    "ቫይታሚን ቢ6፦ ይህ ቫይታሚን ነርቭ አስተላላፊዎች ለማምረት ይረዳል እንዲሁም ስሜትን የሚቆጣጠሩና የመንፈስ ጭንቀትን የሚቀንሱ ዶፓሚንን ያመረታል።\n\n"
                               
                                
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"


                            
                            