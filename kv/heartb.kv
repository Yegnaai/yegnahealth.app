<HeartbScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('heart')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/hf.jpg"
                                                       
                                
                                MDLabel:
                                    text:"\n\nልብ ድካም (የልብ መጨናነቅ CHF)"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center"  
                                    
                                
                            MDLabel:
                                text: "ልብ ድካም የሚከሰተው ልብ ውጤታማ በሆነ መንገድ ደም ማፍሰስ በማይችልበት ጊዜ ሲሆን ይህም ወደ ሳንባዎች እና ሌሎች የሰውነት ክፍሎች ውስጥ ፈሳሽ እንዲከማች ያደርጋል።\n\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13dp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                                padding: "11dp"
                            
                            MDCard:
                                adaptive_height: True
                                padding: "8dp"
                                MDLabel:
                                    text: "ምልክቶች"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "justify"
                            
                            MDLabel:
                                text:
                                    "\n"\ 
                                    "የትንፋሽ እጥረት (በተለይ በሚተኛበት ጊዜ)።\n\n"\
                                    "ድካም እና የማተኮር ችግር።\n\n"\
                                    "በቁርጭምጭሚቶች እና በእግሮች ላይ እብጠት።\n\n"\
                                    "ፈጣን ወይም መደበኛ ያልሆነ የልብ ምት።\n\n"\
                                    "የማያቋርጥ ሳል ወይም ጩኸት ነጭ ወይም ሮዝ ንፍጥ።\n\n"\
                                    "በምሽት የመሽናት ፍላጎት መጨመር።\n\n"                                   
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                            

                            MDCard:
                                adaptive_height: True
                                padding: "8dp"
                                
                                MDLabel:
                                    text: "መንስኤዎችና አገላጭ ሁኔታዎች"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "justify"
                            
                            MDLabel:
                                text:
                                    "\n"\ 
                                    "ከቁጥጥር ውጭ የሆነ ከፍተኛ የደም ግፊት።\n\n"\
                                    "የደም ቧንቧ በሽታ (CAD)።\n\n"\
                                    "የስኳር በሽታ እና ከመጠን ያለፈ ውፍረት።\n\n"\
                                    "ማጨስ እና አልኮልን አላግባብ መጠቀም።\n\n"\
                                    "የኩላሊት በሽታ እና የልብ ሕመም የቤተሰብ ታሪክ።\n\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                            

                            MDCard:
                                adaptive_height: True
                                padding: "8dp"
                                
                                MDLabel:
                                    text: "መከላከል"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                                    halign: "justify"
                            
                            MDLabel:
                                text:
                                    "\n"\ 
                                    "ፈሳሽ እንዳይከማች ለመከላከል ጨውን ይቀንሱ።\n\n"\
                                    "አዘውትሮ የአካል ብቃት እንቅስቃሴ ያድርጉ ጤናማ ክብደት ይንሮት።\n\n"\
                                    "የደም ግፊትን እና ኮሌስትሮልን ይቆጣጠሩ።\n\n"\
                                    "ማጨስ እና ከመጠን በላይ አልኮልን መጠጣት ያስወግዱ።\n\n"\
                                    "በየጊዜው ከልብ ሐኪም ጋር ይማከሩ።\n\n"\
                                    "መደበኛ የህክምና ምርመራ ያድርጉ።\n\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"