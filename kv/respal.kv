<RespalScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('respa')

                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/bra.jpg"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የጡት ኢንፌክሽን"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ማስቲትስ በመባልም የሚታወቀው የጡት ኢንፌክሽን በጡት ቲሹ ላይ የሚከሰት ህመም ፣ እብጠት እና መቅላት ነው። በተለምዶ ጡት በሚያጠቡ ሴቶች ላይ ይከሰታል ነገር ግን ጡት በማያጠቡ ሴቶች ላይም ሊከሰት ይችላል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የጡት ህመም ብዙውን ጊዜ በአንድ ጡት ውስጥ።\n\n"\
                                        "እብጠት እና ሙቀት በተጎዳው አካባቢ።\n\n"\
                                        "መቅላት ወይም (wedge-shaped የሽብልቅ ቅርጽ) ያለው ሽፍታ በጡት ላይ።\n\n"\
                                        "ትኩሳት እና ብርድ ብርድ ማለት ኢንፌክሽኑን ያመለክታል።\n\n"\
                                        "ድካም እና የሰውነት ህመም።\n\n"\
                                        "በጡት ውስጥ ያለ እብጠት።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የጡት ኢንፌክሽን አብዛኛውን ጊዜ የሚከሰተው በባክቴሪያዎች ነው:-\n\n"\
                                        "የተሰነጠቀ ወይም የቆሰሉ የጡት ጫፎች በሚያጠቡ ሴቶች ላይ የተለመደ።\n\n"\
                                        "የተዘጉ የወተት ቱቦዎች።\n\n"\
                                        "የጡት ንፅህና ጉድለት\n\n"\
                                        "ማጨስ የበሽታ ተጋላጭነትን ይጨምራል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"



                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የማስቲቲስ በሽታ ተጋላጭነትን ለመቀነስ እነዚህን እርምጃዎች ይከተሉ፡-\n\n"\
                                        "የጡት ጫፍ መሰንጠቅን ለመከላከል ትክክለኛ የጡት ማጥባትን ዘደ መከተል።\n\n"\
                                        "ወተት እንዳይከማች በየጊዜው ጡት ማጥባት።\n\n"\
                                        "ንጽህናን ይለማመዱ ጡትን ከመንካትዎ በፊት እጅን ይታጠቡ።\n\n"\
                                        "ጥብቅ ልብሶችን ያስወግዱ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "የቤት ውስጥ መድሃኒቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ፈውስን ለማፋጠን ራስን የመንከባከብ ስልቶች:-\n\n"\
                                        "በሙቅ ውሃ መጭመቅ በተጎዳው ቦታ ላይ ለ15 ደቂቃ በቀን ከ3-4 ጊዜ።\n\n"\
                                        "ብዙ ፈሳሾችን መጠጣት ውሀን ከሰውነት ላለማጣት።\n\n"\
                                        "በቂ እንቅልፍ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "በህክምና ባለሞያ መታየት"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ምልክቶች ከ24-48 ሰአታት በኋላ እየባሱ ከህዱ።\n\n"\
                                        "ከፍተኛ ትኩሳት።\n\n"\
                                        "በጡት ውስጥ መግል (abcess)መፈጠር አለ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

