<TelacScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                BoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'horizontal'
                        adaptive_height: True
                        padding: "2dp", 0, "2dp", 0
                        pos_hint: {"center_y": .92}
                        adaptive_height: True

                        MDCard:
                            size_hint: 0.9, None  
                            height: "220dp"
                            orientation: "vertical"
                            elevation: 4
                            FitImage:
                                source: "assets/images/te.jpg"
                                size_hint_y: None
                                height: "280dp"
                                radius: [12, 12, 0, 0]
                    MDIconButton:
                        icon: "close"
                        md_bg_color: 1, 1, 1, .6
                        x: 12
                        pos_hint: {"top": .99}
                        on_release: app.switch_to_screen('tela')

                    ScrollView:
                        MDList:
                            padding: [10, 0, 20, 0]

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text:("#የኩላሊት_ስራ_ማቆም")
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"


                            MDLabel:
                                text:"የኩላሊት ስራ ማቆም (Renal failure) በመባል የሚታወቀው ኩላሊት ከደም ውስጥ ቆሻሻን የማጣራት አቅሙን የሚያጣበት ሁኔታ ነው። የኩላሊት ስራ ማቆም በተለያዩ ምክንያቶች ሊከሰት ይችላል፡-\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                            


                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "#ምልክቶች:-"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"

                            MDLabel:
                                text:
                                    "\n"\
                                    "የኩላሊት ስራ ማቆም ምልክቶች በሽታው በመጀመሪያዎቹ ደረጃዎች ላይታዩ ይችላሉ, ነገር ግን የኩላሊት ሥራ እየቀነሰ ሲሄድ ምልክቶቹ:-"\ 
                                    "ድካም ማቅለሽለሽ እና ማስታወክ የአእምሮ ግራ መጋባት የሽንት መጠን መቀነስ እና የእግር እብጠት የቁርጭምጭሚቶች እብጠት።\n\n"
                                    
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "#አጋላጭ_ሁኔታዎች:-"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                            
                            MDLabel:
                                text:
                                    "\n"\
                                    "ለኩላሊት ስራ ማቆም ከሚያጋልጡ ምክንያቶች መካከል የቤተሰብ ታሪክ የኩላሊት በሽታ፣ የደም ግፊት፣ የስኳር በሽታ፣"\
                                    "የልብ ሕመም እና ከመጠን ያለፈ ውፍረት ይገኙበታል። ለአንዳንድ መድሃኒቶች ወይም መርዛማ ንጥረ ነገሮች መጋለጥ የኩላሊት መጎዳት አደጋን ይጨምራል።\n\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                            
                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "#መከላከያ_መንገዶች:-"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                            
                            MDLabel:
                                text:
                                    "\n"\
                                    "የኩላሊት ህመም (ስራ ማቆም) ለመከላከል የሚወሰዱ እርምጃዎች እንደ የደም ግፊት እና የስኳር በሽታ ያሉ ሥር የሰደዱ በሽታዎችን መቆጣጠር"\
                                    "ኩላሊቶችን ሊጎዱ ለሚችሉ መርዞች ወይም መድኃኒቶች መጋለጥን እና ጤናማ የአኗኗር ዘይቤን መጠበቅ፣ የተመጣጠነ አመጋገብ እና መደበኛ የአካል ብቃት እንቅስቃሴን ያካትታል።"\
                                    "\n\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                                


                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "#ሕክምናው"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"
                            
                            
                            MDLabel:
                                text:
                                    "\n"\
                                    "የኩላሊት ህመም ሕክምናው እንደ ዋናው መንስኤ እና እንደ ሁኔታው ​​ክብደት ይወሰናል. በአንዳንድ አጋጣሚዎች መድሃኒቶች ምልክቶችን ለመቆጣጠር ወይም የበሽታውን እድገት ለማዘግየት ጥቅም ላይ ሊውሉ ይችላሉ።"\
                                    "በጣም ከባድ በሆኑ ጉዳዮች ላይ የተጎዳውን የኩላሊት ተግባር ለመተካት ዲያሊሲስ ወይም የኩላሊት መተካት አስፈላጊ ሊሆን ይችላል. የኩላሊት ችግር እንዳለብዎ ከተጠራጠሩ ወዲያውኑ የሕክምና እርዳታ ማግኘት አስፈላጊ ነው። ምክንያቱም ቀደምት ጣልቃገብነት ችግሮችን ለመከላከልና ውጤቶችን ለማሻሻል ይረዳል።\n\n"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"
                            
                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "#መድሃኒት ማክበር"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "\n\n"
                                    bold: True
                                    adaptive_height: True
                                    font_size: "15dp"
                                
                            
                            
