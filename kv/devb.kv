<DevbScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(5)
        padding: dp(10)

        # Header Section with Navigation Button
        MDBoxLayout:
            adaptive_height: True
            padding: '5dp'
            pos_hint: {"center_y": .99}

            MDIconButton:
                icon: "arrow-left"
                theme_text_color: "Secondary"
                user_font_size: "24sp"
                pos_hint: {"center_x": .1, "center_y": .5}
                on_release: app.switch_to_screen('dev')  # Screen switching here

        # Profile Card
        MDCard:
            size_hint: None, None
            size: "300dp", "350dp"
            elevation: 5
            radius: [20,]
            pos_hint: {"center_x": 0.5}
            #padding: dp(10)
            #md_bg_color: 1, 1, 1, 1  # White card background for contrast
            

            FloatLayout:
                FitImage:
                    source: "assets/dev/m.jpg"
                    size_hint: 1, 1
                    fit_mode: 'cover'
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "y": 0.1}
                    #size_hint: None, None
                    elevation: 8
                    #padding: dp(10)
                    radius: [18,]


        # Name Label with focus on text styling
        MDLabel:
            text: "M  E  R  O  N"
            bold: True 
            halign: 'center'
            font_size: "24sp"
            font_name: "assets/fonts/Tintsl.ttf"
            #theme_text_color: "Custom"
            #text_color: 0.2, 0.2, 0.2, 1
            size_hint_y: None
            height: dp(40)

        # Bio Section with dynamic and focused text presentation
        ScrollView:
            MDGridLayout:
                cols: 1
                adaptive_height: True
                padding: dp(12)
                spacing: dp(20)

                MDLabel:
                    id: label_1
                    text: "Hi, I'm Meron Harbe. I'm a medical student with a love for creativity and art. With a passion for blending science and design"
                    font_name: "assets/fonts/Abyssinica.ttf"
                    font_size: dp(14)
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "left"
                
                MDLabel:
                    id: label_1
                    text: "I focus on creating meaningful, impactful solutions. My interests are in healthcare, mobile apps, and how technology can transform lives."
                    font_name: "assets/fonts/Abyssinica.ttf"
                    font_size: dp(14)
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "left"

        # Contact Section with clear emphasis on text and layout
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            padding: dp(10)
            spacing: dp(10)
            pos_hint: {"center_x": 0.5}

            MDLabel:
                text: "Let's Connect!"
                bold: True
                font_size: "18sp"
                halign: "center"
                theme_text_color: "Primary"

            MDBoxLayout:
                adaptive_height: True
                spacing: dp(20)
                pos_hint: {"center_x": 0.5}

                # Telegram Button
                MDIconButton:
                    icon: "send-circle-outline"
                    user_font_size: "32sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0.7, 1, 1  # Telegram Blue
                    on_release: root.open_url("https://t.me/meron194")

                # LinkedIn Button
                MDIconButton:
                    icon: "github"
                    user_font_size: "24sp"
                    on_release: root.open_url("https-yegnahealth.io/")
                
                MDIconButton:
                    icon: "gmail"
                    user_font_size: "28sp"
                    theme_text_color: "Custom"
                    text_color: 1, 0, 0, 1  # Red Color
                    on_release: root.open_url("mailto:Yegnaai@gmail.com")
