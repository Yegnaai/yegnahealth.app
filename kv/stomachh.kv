<StomachhScreen>:
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('stomach')
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/yetcancer.jpg"

  

                                MDLabel:
                                    text:"\nየትልቁ አንጀት ካንሰር"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center"

                                MDLabel:
                                    text: 
                                        "\nየትልቁ አንጀት ካንሰርልቁ የሚጀምረው በኮሎን ወይም በመደበኛ የሆድ እንቁላል ውስጥ በሚፈጠሩ ትንሽ እብጠቶች ነው።\n\n"                                    
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "13dp"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "በሰገራ ውስጥ ደማቅ ቀይ፣ ጠቆር ያለ ወይም ጥቁር ደም መታየት።\n\n"\
                                        "የሆድ ሕመም እና እብጠት።\n\n"\
                                        "የሰገራ ልማድ ለውጥ ድርቀት ወይም የሰገራ መጠን መቀነስ።\n\n"\
                                        "ምክንያት የሌለው የሰውነት ክብደት መቀነስ።\n\n"\
                                        "እነዚህ ምልክቶች ለ3 ሳምንታት ወይም ከዚያ በላይ ከቆዩ ወዲያውኑ የጤና ባለሙያን መጠየቅ አስፈላጊ ነው።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                            
                                
                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#አጋላጭ ሁነታ"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ዕድሜ 90% የሚሆኑት ጉዳቶች ከ40 ዓመት በላይ ባሉ ሰዎች ይታያሉ።\n\n"\
                                        "በቤተሰብ ውስጥ የኮሎን ካንሰር ወይም ፖሊፖች መኖር።\n\n"\
                                        "ማጨስ እና አልኮል እነዚህ የአኗኗር ዘይቤዎች የጉበት እና የአንጀት ካንሰርን አደጋ ይጨምራሉ።\n\n"\
                                        "ተዘዋዋሪ በሽታዎች ለምሳሌ የአንጀት እብጠት ወይም የተደጋጋሚ የአንጀት በሽታዎች።\n\n"\
                                        "ዝቅተኛ-ፋይበር አመጋገብ ወደ የሆድ ድርቀት የሚመራ።\n\n"\
                                        "የአካል ብቃት እንቅስቃሴ እጥረት።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "መደበኛ ምርመራ።\n\n"\
                                        "የተቀነባበሩ ወይም ዝቅተኛ ፋይበር የያዙ ምግቦችንና ቅባታማ ምግቦችን ያስወግዱ።\n\n"\
                                        "ጨርስ ማጨስን መቆም አልኮልን መጠነኛ መጠቀም።\n\n"\
                                        "ብዙ አትክልት ፍራፍሬ እና ሙሉ እህሎችን መመገብ።\n\n"\
                                        "በየቀኑ 30 ደቂቃ አካላዊ እንቅስቃሴ ማድረግ።\n\n"\
                                        "ትልቁ አንጀት ካንሰር በመጀመሪያ ደረጃ ሲታወቅ ሙሉ ለሙሉ ሊታከም የሚችል ነው። የመከላከያ እርምጃዎችን በመውሰድ እና የጤና ክትትልን በመተንተን የጉዳቱን አደጋ ሊቀንስ ይችላል። ለተጨማሪ መረጃ ከጤና ባለሙያዎች ጋር መተባበር አስፈላጊ ነው።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"