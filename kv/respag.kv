<RespagScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('respa')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/pld.jpg"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የዳሌ እብጠት በሽታ"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የዳሌ ኢንፍላማቶሪ በሽታ(PID) የማህፀን ቱቦዎች እና ኦቫሪዎችን ጨምሮ በሴቶች የመራቢያ አካላት ላይ የሚደርስ ኢንፌክሽን ነው።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "በታችኛው የሆድ ወይም የዳሌ ህመም (አሰልቺ ወይም ከባድ)።\n\n"\
                                        "ያልተለመደ የሴት ብልት ፈሳሽ (ቢጫ / አረንጓዴ ፣ መጥፎ ጠረን)።\n\n"\
                                        "የሚያሰቃይ ሽንት።\n\n"\
                                        "በግንኙነት ጊዜ ህመም።\n\n"\
                                        "መደበኛ ያልሆነ የወር አበባ መከሰት።\n\n"\
                                        "ትኩሳት ፣ ብርድ ብርድ ማለት ፣  ማቅለሽለሽ ወይም ማስታወክ ከባድ ኢንፌክሽኑ ከተስፋፋ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "PID የሚከሰተው ባክቴሪያዎች ወደ reproductive tract ገብተው ሲሰራጩ ነው። የተለመዱ መንስኤዎች የሚከተሉትን ያካትታሉ ፡-\n\n"\
                                        "በጾታዊ ግንኙነት የሚተላለፉ ኢንፌክሽኖች (ክላሚዲያ ፣ ጨብጥ)።\n\n"\
                                        "በባክቴሪያ የሚመጡ ኢንፌክሽኖች ወደ ማህጸን ውስጥ የሚገቡ መደበኛ የሴት ብልት ባክቴሪያዎች።\n\n"\
                                        "ጥንቃቄ የጎደለው የግብረ ሥጋ ግንኙነት።\n\n"\
                                        "ፅንስ ማስወረድ ወይም ልጅ መውለድ ባክቴሪያዎች ወደ የመራቢያ ሥርዓት ሊገቡ ይችላሉ።\n\n"\
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ደህንነቱ የተጠበቀ የግብረ ሥጋ ግንኙነትን ይለማመዱ (ኮንዶም ይጠቀሙ)።\n\n"\
                                        "መደበኛ የአባላዘር በሽታ ምርመራ።\n\n"\
                                        "ጥሩ ንጽህና።\n\n"\
                                        "ቶሎ የህክምና እርዳታ ያግኙ ያልተለመደ የዳሌ ህመም ወይም ፈሳሽ ካዩ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
