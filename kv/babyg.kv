<BabygScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('baby')

                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/oral.jpg"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የአፍ ፈንገስ"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የአፍ ፈንገስ በሕፃናት ፣ በአረጋውያን እና በተዳከመ የበሽታ መቋቋም አቅማቸው ላይ በብዛት ይታያል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "በምላስ ፣ በዉስጥ ጉንጯ፣የአፍ ጣራ እና ጉሮሮ ላይ ነጭ ፣ ክሬም ፕላስ።\n\n"\
                                        "መቅላት እና ህመም በአፍ ውስጥ\n\n"\
                                        "ጣዕም ማጣት ወይም ጥጥ የመሰለ ስሜት በአፍ ውስጥ።\n\n"\
                                        "መሰነጣጠቅ እና በአፍ ጥግ ላይ መቅላት።\n\n"\
                                        "ህመም ወይም የመዋጥ ችግር (ከባድ ከሆነ)።\n\n"\
                                        "መጠነኛ የደም መፍሰስ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "በአፍ ውስጥ ያለው የፈንገስ ተፈጥሯዊ ሚዛን ሲስተጓጎል የአፍ ውስጥ ህመም ይከሰታል።\n\n"\
                                        "የስኳር በሽታ ከፍተኛ የስኳር መጠን ፈንገስ እንዲያድግ ይረዳል።\n\n"\
                                        "አንቲባዮቲክስ ጠቃሚ ባክቴሪያዎችን ይገድላል ፣ Candida ከመጠን በላይ እንዲያድግ ያስችላል።\n\n"\
                                        "በመድሀኒት ወይም በድርቀት ምክንያት የሚከሰት የአፍ መድረቅ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"



                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የአፍ ንጽህናን ይጠብቁ።\n\n"\
                                        "የደም ስኳር መጠን የተረጋጋ እንዲሆን ያድርጉ።\n\n"\
                                        "የተመጣጠነ ምግብ ይመገቡ ከአትክልትና ፍራፍሬ በሽታ የመከላከል አቅምን ያጠናክሩ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "የቤት ውስጥ መድሃኒቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "በጨውሃማ ውሃ አፍን መታጠብ የፈንገስ እድገትን ለመቀነስ ይረዳል።\n\n"\
                                        "እርጎ ጥሩ ባክቴሪያዎችን ወደነበረበት ይመልሳል።\n\n"\
                                        "ብዙ ፈሳሾችን መጠጣት ውሀን ከሰውነት ላለማጣት።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "በህክምና ባለሞያ መታየት"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ምልክቶች  ከሁለት ሳምንት በላይ ከቆዩ ህክምና ቢደረግም።\n\n"\
                                        "ከህመም ወይም የመዋጥ ችግር።\n\n"\
                                        "ተደጋጋሚ የሆድ ድርቀት አለብዎት ፣ ይህም መሰረታዊ የጤና ችግርን ሊያመለክት ይችላል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

