<RespabScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('respa')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/yme.jpg"

                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የማህፀን እጢ"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የማሕፀን እጢ በማህፀን ውስጥ የሚፈጠሩ ካንሰር ያልሆኑ እድገቶች ናቸው።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "በወር አበባ ግዜ ብዙ የደም መፍሰስ።\n\n"\
                                        "የማህፀን ህመም ወይም ግፊት።\n\n"\
                                        "በግንኙነት ጊዜ ህመም።\n\n"\
                                        "የመሽናት ፍላጎት መጨመር ወይም አስቸኳይ ሽንት።\n\n"\
                                        "የታችኛው ጀርባ ህመም።\n\n"\
                                        "ለማርገዝ መቸገር (ፋይብሮይድ የማህፀን ቱቦዎችን ከዘጋችው)።\n\n"
                                    
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የሆርሞን ተጽእኖ።\n\n"\
                                        "የዘረመል ምክንያቶች፡ የቤተሰብ ታሪክ አደጋን ይጨምራል።\n\n"\
                                        "የቤተሰብ ታሪክ የማህፀን፣ የጡት ወይም የኮሎሬክታል ካንሰር ታሪክ አደጋን ይጨምራል።\n\n"\
                                        "ውፍረት የሰውነት ስብ መጨመር የኢስትሮጅንን ምርት ይጨምራል።\n\n"\
                                        "አመጋገብ እና የአኗኗር ዘይቤ ቀይ ስጋን በብዛት መመገብ እና አትክልትና ፍራፍሬ በብዛት አለመመገብ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "መደበኛ የማህፀን ህክምና ምርመራ።\n\n"\
                                        "የኢስትሮጅንን መጠን ለመቀነስ ጤናማ ክብደትን እንድኖረን ማድርግ።\n\n"\
                                        "አልኮሆል እና ካፌይን መጠጣትን መቅነስ።\n\n"\
                                        "ጭንቀትን በዮጋ እና በማሰላሰል ይቆጣጠሩ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"