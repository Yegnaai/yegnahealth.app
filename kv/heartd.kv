<HeartdScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('heart')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/he.jpg"
                                                       
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ያልተስተካከለ የልብ ምት"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text: 
                                        "\n"\
                                        "Arrhythmia የሚያመለክተው ያልተለመደ የልብ ምቶች በጣም ፈጣን (tachycardia) በጣም ቀርፋፋ (bradycardia) ወይም መደበኛ ያልሆነ ሊሆን ይችላል።\n\n"\
                                        "አንዳንድ arrhythmias ምንም ጉዳት የላቸውም ሌሎች ደግሞ ለሕይወት አስጊ ናቸው።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "14dp"
                                    theme_text_color: "Hint"
                                    adaptive_height: True
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ማዞር ወይም ራስ ምታት።\n\n"\
                                        "የደረት ሕመም ወይም ምቾት ማጣት።\n\n"\
                                        "የትንፋሽ እጥረት ድካም።\n\n"\
                                        "መደበኛ ያልሆነ የልብ ምት።\n\n"                                 
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎችና አገላጭ ሁኔታዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የልብ በሽታ (CAD)።\n\n"\
                                        "ከፍተኛ የደም ግፊት።\n\n"\
                                        "የኤሌክትሮላይት ሚዛን መዛባት ዝቅተኛ ፖታሲየም ማግኒዥየም።\n\n"\
                                        "ከመጠን በላይ ካፌይን ፣ አልኮሆል ወይም አደንዛዥ ዕፅ መውሰደ።\n\n"\
                                        "የታይሮይድ እክሎች(ሃይፐርታይሮዲዝም ወይም ሃይፖታይሮዲዝም)።\n\n"\
                                        "ማጨስ እና ከመጠን በላይ ጭንቀት።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ከፍተኛ የደም ግፊት እና ኮሌስትሮልን ይቆጣጠሩ።\n\n"\
                                        "አበረታች መድሃኒቶችን (ካፌይን አልኮል ኒኮቲን መድሀኒት) ያስወግዱ።\n\n"\
                                        "ጭንቀትን መቆጣጠር።\n\n"\
                                        "ማጨስ እና ከመጠን በላይ አልኮልን መጠጣት ያስወግዱ።\n\n"\
                                        "በየጊዜው ከልብ ሐኪም ጋር ይማከሩ።\n\n"\
                                        "የደም ግፊትን በየጊዜው መከታተል።\n\n"\
                                        "የታዘዙ መድሃኒቶችን በአግባቡ ይውሰዱ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"