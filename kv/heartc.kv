<HeartcScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('heart')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/cad.jpg"
                                                       
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ከፍተኛ የደም ግፊት (HBP)"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text: 
                                        "\n"\
                                        "የደም ግፊት መጨመር የሚከሰተው በደም ወሳጅ ግድግዳዎች ላይ ያለው የደም ኃይል በቋሚነት ከመጠን በላይ ከሆነ ነው።\n\n"\
                                        "በጊዜ ሂደት ይህ ወደ ልብ ሕመም ፣ ስትሮክ ፣ የኩላሊት መጎዳት እና ሌሎች ውስብስቦችን ሊያስከትል ይችላል ብዙ ጊዜ ዝምተኛ ገዳይ ይባላል ምክንያቱም ከባድ ጉዳት እስክያደርስ ድረስ ምልክቶችን ላያሳይ ይችላል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "14dp"
                                    theme_text_color: "Hint"
                                    adaptive_height: True
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ብዙ ሰዎች በመጀመሪያዎቹ ደረጃዎች ላይ ምልክቶች አያዩም ፣ ነገር ግን የደም ግፊት በጣም ከፍተኛ በሚሆንበት ጊዜ ፣ ምልክቶቹ የሚከተሉትን ሊያካትቱ ይችላሉ፥\n\n"\
                                        "ከባድ ራስ ምታት።\n\n"\
                                        "ማዞር ወይም ብዥ ያለ እይታ።\n\n"\
                                        "የደረት ሕመም።\n\n"\
                                        "የትንፋሽ እጥረት ድካም።\n\n"\
                                        "ከአፍንጫ የምፍሰስ ደም።\n\n"\
                                        "መደበኛ ያልሆነ የልብ ምት።\n\n"                                 
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎችና አገላጭ ሁኔታዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ከመጠን ያለፈ ውፍረት እና የአካል ብቃት እንቅስቃሴ አለማድረግ።\n\n"\
                                        "ማጨስ እና ከመጠን በላይ አልኮል መጠጣት።\n\n"\
                                        "ሥር የሰደደ ውጥረት።\n\n"\
                                        "የደም ግፊት ዘረመል እና የቤተሰብ ታሪክ።\n\n"\
                                        "የስኳር በሽታ እና የኩላሊት በሽታ።\n\n"\
                                        "ዕድሜ (አደጋ ከእድሜ ጋር ይጨምራል)።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የጨው መጠን ይቀንሱ።\n\n"\
                                        "የተመጣጠነ ምግብ ይበሉ ፍራፍሬዎች አትክልቶች።\n\n"\
                                        "አካላዊ እንቅስቃሴን ይጨምሩ (ቢያንስ በቀን 30 ደቂቃዎች)።\n\n"\
                                        "የደም ግፊትን እና ኮሌስትሮልን ይቆጣጠሩ።\n\n"\
                                        "ማጨስ እና ከመጠን በላይ አልኮልን መጠጣት ያስወግዱ።\n\n"\
                                        "በየጊዜው ከልብ ሐኪም ጋር  ይማከሩ።\n\n"\
                                        "ጭንቀትን ይቀንሱ።\n\n"\
                                        "የደም ግፊትን በየጊዜው መከታተል።\n\n"\
                                        "የታዘዙ መድሃኒቶችን በአግባቡ ይውሰዱ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"