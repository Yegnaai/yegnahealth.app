<GlandaScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'
                    
                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('gland')


                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/diabetes.jpg"

                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የስኳር በሽታ"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "በዋነኛነት ሁለት ዋና ዋና የስኳር ዓይነቶች አሉ፡ (Type1) ዓይነት 1 እና (Type)2 ዓይነት 2 ፣ በእርግዝና ወቅት የሚከሰት የእርግዝና የስኳር በሽታ።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "16sp"
                                    halign: 'center'
                                    theme_text_color: "Hint"
                                    adaptive_height: True
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "የስኳር በሽታ ዓይነቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "አይነት 1 የስኳር በሽታ"\
                                        "የሰውነት በሽታ የመከላከል ስርዓት በቆሽት ውስጥ ኢንሱሊን የሚያመነጩ ህዋሶችን በስተት የሚያጠቃበት ራስን የመከላከል ሁኔታ ነው።\n\n"\
                                        "ይህ ዓይነቱ በተለምዶ በልጅነት ወይም በጉርምስና ወቅት ይታያል እና የዕድሜ ልክ የኢንሱሊን ሕክምናን ይፈልጋል።\n\n"\
                                        "አይነት 2 የስኳር በሽታ"\
                                        "በጣም የተለመደው ዓይነት 2 የሚከሰተው ሰውነታችን ኢንሱሊንን መቋቋም ሲችል ቆሽት በቂ ኢንሱሊን ማመነጭት ሳይችል ስቀረ ነው።\n\n"\
                                        "እንደ ደካማ አመጋገብ፣ የአካል ብቃት እንቅስቃሴ አለማድረግ እና ከመጠን ያለፈ ውፍረት ያሉ የአኗኗር ዘይቤዎች አደጋውን በእጅጉ ይጨምራሉ።\n\n"\
                                        "የእርግዝና የስኳር በሽታ\n\n"\
                                        "ይህ በእርግዝና ወቅት የሚከሰት ሲሆን አብዛኛውን ጊዜ ከወሊድ በኋላ የምጠፋ ሲሆን ነገር ግን በኋለኛው ህይወት ለእናቲቱም ሆነ ለልጁ ለታይፕ 2 የስኳር በሽታ ተጋላጭነትን ይጨምራል።\n\n"        
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#ምልክቶች፡"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የስኳር በሽታ ምልክቶች የሚከተሉትን ያካትታሉ:-\n\n"\
                                        "ጥማት መጨመር እና ተደጋጋሚ ሽንት መሽናት\n\n"\
                                        "ከፍተኛ ረሃብ : ድካም\n\n"\
                                        "ያልታወቀ ክብደት መቀነስ (በአይነት 1 የተለመደ)\n\n"\
                                        "የደበዘዘ እይታ\n\n"\
                                        "ቀስ በቀስ የሚፈውሱ ቁስሎች ወይም ተደጋጋሚ ኢንፌክሽኖች\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "10dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                                       
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የመጀመሪያው ዓይነት የስኳር በሽታ ፡- ትክክለኛው መንስኤ ምን እንደሆነ ባይታወቅም የጄኔቲክ እና የአካባቢ ሁኔታዎች ጥምረት እንደሆነ ይታሰባል።\n\n"\
                                        "አይነት 2 የስኳር በሽታ ፡ ለአደጋ ተጋላጭነት ምክንያቶች ከመጠን ያለፈ ውፍረት ፣ የአካል ብቃት እንቅስቃሴ አለማድረግ ፣ የስኳር ህመም የቤተሰብ ታሪክ እና እድሜ ከ45 ናቸው።\n\n"\
                                        "ለበለጠ ሕክምና ወደ ሆስፒታል ያምሩ\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0

                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "አመጋገብ እና የአካል ብቃት እንቅስቃሴ ፥ በፋይበር የበለፀገ እና ጤናማ አመጋገብን እና መደበኛ የአካል ብቃት እንቅስቃሴ ማድረግ የደም ስኳርን ለመቆጣጠር እና ዓይነት 2 የስኳር በሽታን ለመከላከል ይረዳል።\n\n"\
                                        "ጤናማ ክብደትን መጠበቅ ዓይነት 2 የስኳር በሽታ የመያዝ እድልን ይቀንሳል።\n\n"\
                                        "መደበኛ ምርመራዎች ፥ የደም ስኳር መጠንን መከታተል ቀደም ብሎ ለማወቅ እና ለመቆጣጠር ይረዳል።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "ውስብስቦች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ሕክምና ካልተደረገለት ወይም በደንብ ካልታከመ የስኳር በሽታ ወደሚከተሉት ሊመራ ይችላል-\n\n"\
                                        "የልብና የደም ቧንቧ በሽታ (የልብ ድካም እና ስትሮክ)\n\n"\
                                        "Neuropathy (የነርቭ ጉዳት)\n\n"\
                                        "Nephropathy (የኩላሊት ጉዳት)\n\n"\
                                        "Retinopathy (የእይታ ችግሮች እና ሊከሰት የሚችል ዓይነ ስውር)\n\n"\
                                        "የእግር መጎዳት (ወደ መቆረጥ የሚያመሩ ኢንፌክሽኖች)\n\n"\
                                        "የስኳር በሽታ የዕድሜ ልክ ሁኔታ ነው፣ ነገር ግን ውጤታማ በሆነ አስተዳደር፣ ግለሰቦች ጤናማ ህይወት መምራት እና ችግሮችን ሊቀንሱ ይችላሉ። ቅድመ ምርመራ እና ጣልቃገብነት ጥሩ የህይወት ጥራትን ለመጠበቅ ወሳኝ ናቸው።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                    