<StomachfScreen>:
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('stomach')
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/alcohepa.jpg"

                                

                                MDLabel:
                                    text:"\nየአልኮሆል ሄፓታይተስ"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    halign: "center"

                                MDLabel:
                                    text: "\nለረጅም ጊዜ አልኮሆል በመጠጣት የሚመጣ የጉበት በሽታ ነው። ከቀላል እስከ ከባድ ጉዳት ሊያደርስ ይችላል ከነዘም መሐል ወደ ጉበት ውድቀት ወይም ሞት ልያመራ ይችላል።\n\n"                                    
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#የአልኮሆል ሄፓታይተስ ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "13dp"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የቆዳ እና የዓይን ብጫ መሆን።\n\n"\
                                        "የምግብ ፍላጎት ማጣት ወይም መቀነስ።\n\n"\
                                        "ማቅለሽለሽ እና ማስታወክ።\n\n"\
                                        "የላይኛው የሆድ ህመም ወይም እብጠት።\n\n"\
                                        "በሆድ ውስጥ እብጠት (ascites)።\n\n"\
                                        "ግራ መጋባት ወይም የአዕምሮ ለውጦች (የሄፕታይተስ ኢንሴፍሎፓቲ)።\n\n"\
                                        "ቀላል ስብራት ወይም ደም መፍሰስ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                            
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#አጋላጭ ሁነታ"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ከመጠን በላይ አልኮሆል መጠጣት በተለይም ሥር የሰደደ ከባድ መጠጥ የጉበት ሴሎችን ይጎዳል።\n\n"\
                                        "ከአልኮል ሜታቦሊዝም (ለምሳሌ, acetaldehyde) መርዛማ ንጥረ ነገሮችን ማከማቸት የጉበት እብጠትን ያባብሳል።\n\n"\
                                        "የስኳር በሽታ እና ከመጠን በላይ ውፍረት።\n\n"\
                                        "ለመርዝ መጋለጥ (ለምሳሌ በ(aflatoxins) የተበከሉ ምግቦች)መመግብ።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                    adding: "20dp", 0, "20dp", 0
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "11dp"

                                    MDLabel:
                                        text: "#መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "justify"
                                
                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "ሄፓታይተስን መከላከል።\n\n"\
                                        "ደህንነቱ የተጠበቀ የግብረ ሥጋ ግንኙነትን ይለማመዱ እና መርፌዎችን ከመጋራት ይቆጠቡ።\n\n"\
                                        "ከመጠን በላይ መጠጣትን ያስወግዱ።\n\n"\
                                        "በመደበኛነት የአካል ብቃት እንቅስቃሴ ያድርጉ እና የስኳር በሽታን ይቆጣጠሩ።\n\n"
                                    font_name:"assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"