<KdinycScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('kdiny')
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/kds.jpg"

                                
                                MDLabel:
                                    text:
                                        "\n"\
                                        "የኩላሊት ጠጠር"

                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True
                                
                                MDLabel:
                                    text: 
                                        "\n"\
                                        "በኩላሊት ውስጥ የሚፈጠሩ ጠንካራ የማዕድን ክምችቶች ሲሆኑ የትኛውንም የሽንት ቱቦ ክፍል ሊጎዱ ይችላሉ።"\
                                        "የሚከሰቱት በሽንት ውስጥ በሚገኙ ማዕድናት እና ጨዎች ውስጥ ሚዛን ሲዛባ ነው, ይህም የሚከማቹ እና ድንጋዮችን የሚፈጥሩ ክሪስታሎች እንዲፈጠሩ ያደርጋል።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "16sp"
                                    halign: 'center'
                                    theme_text_color: "Hint"
                                    adaptive_height: True
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "ምልክቶቹ እንደ ድንጋዩ መጠን እና ቦታ ሊለያዩ ይችላሉ ነገር ግን በተለምዶ የሚከተሉትን ያካትታሉ:-"\
                                        "ከባድ ህመም ፥ በተለምዶ በጎን፣ በጀርባ ወይም ከጎድን አጥንት በታች፤ ህመም ወደ ታችኛው የሆድ እና ብሽሽት ሊሰራጭ ይችላል።\n\n"\
                                        "በሽንት ውስጥ ያለ ደም (Hematuria) ፡ ሽንት ሮዝ፣ ቀይ ወይም ቡናማ ሊመስል ይችላል።\n\n"\
                                        "ተደጋጋሚ ሽንት ፡ የመሽናት ፍላጎት መጨመር፣ ብዙ ጊዜ ትንሽ ሽንት ብቻ ሲያልፍ።\n\n"\
                                        "ማቅለሽለሽ እና ማስታወክ ፡- ብዙ ጊዜ በህመም ምክንያት።\n\n"\
                                        "ደመናማ ወይም መጥፎ ሽታ ያለው ሽንት ፥ የኩላሊት ጠጠር ካለበት ኢንፌክሽን ሊያመለክት ይችላል።\n\n"
                                    
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የኩላሊት ጠጠር የሚፈጠረው ሽንት በጣም በሚከማችበት ጊዜ ሲሆን ይህም ማዕድናት እንዲቀቡ እና እንዲጣበቁ ያስችላቸዋል። ለኩላሊት ጠጠር መፈጠር አስተዋጽኦ የሚያደርጉ ምክንያቶች የሚከተሉትን ያካትታሉ:-\n\n"\
                                        "ድርቀት :- በቂ ውሃ አለመጠጣት አደጋን ይጨምራል።\n\n"\
                                        "አመጋገብ :- ከፍተኛ የፕሮቲን ፣ የጨው እና የስኳር መጠን መጨመር ለኩላሊት ጠጠር አደጋን ይጨምራል።\n\n"\
                                        "የቤተሰብ ታሪክ ፥ የጄኔቲክ ቅድመ፡ዝንባሌ ሚና ሊጫወት ይችላል።\n\n"\
                                        "የተወሰኑ የህክምና ሁኔታዎች**፡ እንደ ሃይፐርፓራታይሮዲዝም፣ ሪህ እና የሽንት ቱቦ ኢንፌክሽን የመሳሰሉ ሁኔታዎች የኩላሊት ጠጠር ስጋትን ይጨምራሉ።\n\n"                                    
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"
                                    
                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"
                                
                                MDLabel:
                                    text:
                                        "\n"\ 
                                        "የኩላሊት ጠጠር አደጋን ለመቀነስ:-\n\n"\
                                        "በሰውነቶ በቅ ፈሳሽ ይኑርዎት ፥ ግልጽ ወይም ቀላል፡ቢጫ ሽንት ለማምረት በቂ ውሃ ይጠጡ።\n\n"\
                                        "የሶዲየም እና የእንስሳት ፕሮቲኖችን ይገድቡ ፡- ከፍተኛ የጨው እና የፕሮቲን አወሳሰድ የካልሲየም ልቀትን እና የጠጠሮች አፈጣጠርን ይጨምራል።\n\n"\
                                        "የካልሲየም ቅበላ ፡- የካልሲየም አወሳሰድን ማመጣጠን፣ ምክንያቱም ከመጠን በላይ እና በጣም ትንሽ ጠጠሮች አስተዋፅዖ ያደርጋሉ።\n\n"\
                                        "ከሀኪም ጋር መማክር ፡ አዘውትሮ የሚደረግ ምርመራ የአደጋ መንስኤዎችን ለመለየት እና ግላዊ የሆነ የአመጋገብ ማስተካከያ ለማድረግ ይረዳል።\n\n"\
                                        "የኩላሊት ጠጠር በጣም የሚያሠቃይ ቢሆንም ብዙውን ጊዜ ሊታከም ይችላል። የመከላከያ እርምጃዎች፣ በተለይም ውሃ እና የአመጋገብ ማስተካከያ ፣ የኩላሊት ጠጠር ድጝሞሽን ለመቀነስ ቁልፍ ናቸው።\n\n"                                  
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
