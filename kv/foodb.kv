<FoodbScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                BoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'horizontal'
                        adaptive_height: True
                        padding: "2dp", 0, "2dp", 0
                        pos_hint: {"center_y": .92}
                        adaptive_height: True

                        MDCard:
                            size_hint: 0.9, None  
                            height: "220dp"
                            orientation: "vertical"
                            elevation: 4
                            FitImage:
                                source: "assets/food/green.png"
                                size_hint_y: None
                                height: "280dp"
                                radius: [12, 12, 0, 0]
                            MDLabel:
                                text: "አቮካዶ ወይም የአቮካዶ ጁስ"
                                font_name: "assets/fonts/Yeshuah.ttf"
                                bold: True
                                font_size: "19sp"
                                theme_text_color: "Secondary"
                                halign: "center"
                                valign: "center"
                                adaptive_height: True
                    MDIconButton:
                        icon: "close"
                        md_bg_color: 1, 1, 1, .6
                        x: 12
                        pos_hint: {"top": .99}
                        on_release: app.switch_to_screen('food')
                        adaptive_height: True

                    ScrollView:
                        MDList:
                            padding: [10, 0, 20, 0]

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "አቮካዶ፡-፣"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "15dp"


                            MDLabel:
                                text: 
                                    "አቮካዶ፡-\n\nበሰውነታችን የሚገኝን የኮሌስትቶል መጠን ዝቅ በማድረግ ረገድ አቻ የለውም"
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"

                            MDCard:
                                adaptive_height: True
                                padding: "11dp"

                                MDLabel:
                                    text: "#የጤና ጥቅሞች፡-"
                                    bold: True
                                    adaptive_height: True
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"

                            MDLabel:
                                text:
                                    "\n"\ 
                                    "አቮካዶ፡-በውስጡ ያዘለው ቫይታሚን ኢ ለልብ ህመም/ስትሮክ የመጋለጥ ዕድላችንንም በእጅጉ ይቀንሳል፣እርጅናን ለመከላከል እና የቆዳ ውበት ተጠብቆ እንዲቆይ ይረዳሉ፣."\
                                    "በአቮካዶ ውስጥ በብዙ መጠን የሚገኘው አንቲ ኦክሲዳንት ቆዳ እንዳይሸበሸብ እና የሞቱ የቆዳ ሴሎች\n"\
                                    "እራሳቸውን እንዲተኩ ሲያግዝ፥ ካሮቲኖይድስ የተባለው ንጥረ ነገርም በቆዳ ላይ የሚታዩና የቆዳን ውበት የሚቀንሱ ምልክቶች እንዳይከሰቱ ያደርጋል።\n\n"\
                                    "#የልብ ጤና-"\
                                    "መጥፎ የኮሌስትሮል መጠን ለመቀነስ ይረዳል, ይህም በልብ በሽታ የመያዝን አጋጣሚን ይቀንሳል.ጤናማ የደም ግፊት መጠን እንዲኖረው ይረዳል።\n\n"\
                                    "#የቆዳ እና የፀጉር ጤና-"\
                                    "ቫይታሚን ኢ እና ሲ እነዚህ ቫይታሚኖች ሴሎችን ከኦክሲዴቲቭ(oxidative) ጉዳት በመጠበቅ ጤናማ ቆዳና ፀጉርን እንደኖረን ያደሪጋል"\
                                    "#ክብደት ለመቀነስ"\
                                    "ክብደት ለመቀነስ ፍቱን ነው፣ ለስኳር ህመምተኞች ተመራጭ ነው\n\n"\
                                    "በአቮካዶ ውስጥ በጥሩ መጠን የሚገኘው ፖታሺየም በደማችን ውስጥ ያለውን የግሉኮስ መጠን በማመጣጠን በሰውነት ውስጥ የልብ ስራንና የስኳር መጠንን የተረጋጋ እንዲሆን ያስችላል\n\n"\
                                    "አቮካዶ፡\n"\
                                    "የቫይታሚን ቢ ቤተሰቦችን አጠቃሎ የያዘና ፖታሲየምን የያዘ ሲሆን(የመረጋጋትና የደስታ ሆርሞን )ይጨምራል እንዲሁም ግፊትን  በመቆጣጠር የተረጋጋና ትኩረቱ የተሰበሰበ ሰው ያደርገናል፡፡\n\n"
                               
                                
                                font_name: "assets/fonts/Abyssinica.ttf"
                                font_size: "13sp"
                                adaptive_height: True
                                theme_text_color: "Secondary"

                            
