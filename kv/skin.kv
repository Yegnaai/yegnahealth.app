<SkinScreen>:
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    
                    MDBoxLayout:
                        color: 1, 1, 1, 1  # Cool white color
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}
                        adaptive_height: True

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('main')
                        
                        
                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    MDBoxLayout:
                        orientation: "vertical"
                        pos_hint: {"center_y": .5}
                        ScrollView:
                            MDGridLayout:
                                cols: 1
                                padding: "28dp"
                                spacing: "20dp"
                                adaptive_height: True
                                size_hint_y: None
                                height: self.minimum_height

                                MDCard:
                                    size_hint: 0.45, None
                                    height: "120dp"
                                    radius: [12, 12, 12, 12]
                                    on_release: app.switch_to_screen('skina')
                                    orientation: "vertical"
                                    elevation: 4
                                    adaptive_height: True

                                    FitImage:
                                        source: "assets/images/magel.jpg"
                                        size_hint_y: None
                                        height: "100dp"
                                        radius: [12, 12, 0, 0]

                                    MDLabel:
                                        text:("መግል ያዘለ እብጠት")
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        bold: True
                                        font_size: "15dp"
                                        theme_text_color: "Secondary"
                                        halign: "center"
                                        valign: "center"
                                        adaptive_height: True

                                MDCard:
                                    size_hint: 0.45, None
                                    height: "120dp"
                                    radius: [12, 12, 12, 12]
                                    on_release: app.switch_to_screen('skinb')
                                    orientation: "vertical"
                                    elevation: 4

                                    FitImage:
                                        source: "assets/images/ekek.jpg"
                                        size_hint_y: None
                                        height: "100dp"
                                        radius: [12, 12, 0, 0]

                                    MDLabel:
                                        text:("እከክ")
                                        bold: True
                                        font_size: "15dp"
                                        theme_text_color: "Secondary"
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        halign: "center"
                                        valign: "center"
                                        adaptive_height: True

                                MDCard:
                                    size_hint: 0.45, None
                                    height: "120dp"
                                    radius: [12, 12, 12, 12]
                                    on_release: app.switch_to_screen('skinc')
                                    orientation: "vertical"
                                    elevation: 4

                                    FitImage:
                                        source: "assets/images/warts.jpg"
                                        size_hint_y: None
                                        height: "100dp"
                                        radius: [12, 12, 0, 0]

                                    MDLabel:
                                        text:("ኪንታሮት")
                                        bold: True
                                        font_size: "15dp"
                                        theme_text_color: "Secondary"
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        halign: "center"
                                        valign: "center"
                                        adaptive_height: True

                                MDCard:
                                    size_hint: 0.45, None
                                    height: "120dp"
                                    radius: [12, 12, 12, 12]
                                    on_release: app.switch_to_screen('skind')
                                    orientation: "vertical"
                                    elevation: 4

                                    FitImage:
                                        source: "assets/images/shefta.jpg"
                                        size_hint_y: None
                                        height: "100dp"
                                        radius: [12, 12, 0, 0]

                                    MDLabel:
                                        text:("የቆዳ ሽፍታ")
                                        bold: True
                                        font_size: "15dp"
                                        theme_text_color: "Secondary"
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        halign: "center"
                                        valign: "center"
                                        adaptive_height: True

                                MDCard:
                                    size_hint: 0.45, None
                                    height: "120dp"
                                    radius: [12, 12, 12, 12]
                                    on_release: app.switch_to_screen('skine')
                                    orientation: "vertical"
                                    elevation: 4

                                    FitImage:
                                        source: "assets/images/cancer.jpg"
                                        size_hint_y: None
                                        height: "100dp"
                                        radius: [12, 12, 0, 0]

                                    MDLabel:
                                        text:("የቆዳ ካንሰር")
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        bold: True
                                        font_size: "15dp"
                                        theme_text_color: "Secondary"
                                        halign: "center"
                                        valign: "center"
                                        adaptive_height: True
                                