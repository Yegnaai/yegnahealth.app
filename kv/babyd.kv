<BabydScreen>
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: '10dp'

                    MDBoxLayout:
                        adaptive_height: True
                        padding: '5dp'
                        pos_hint: {"center_y": .99}

                        MDIconButton:
                            icon: "close"
                            md_bg_color: 1, 1, 1, .6
                            x: 12
                            pos_hint: {"top": .99}
                            on_release: app.switch_to_screen('baby')

                        MDIconButton:
                            icon: "theme-light-dark"
                            theme_text_color: "Secondary"
                            on_release: app.toggle_theme()

                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            padding: dp(2)
                            spacing: dp(2)
                            adaptive_height: True

                            MDBoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size_hint_x: 0.6
                                adaptive_height: True
                                pos_hint: {"center_x": 0.5}
                                padding: dp(10)

                                FloatLayout:
                                    size_hint: None, None
                                    size: "280dp", "280dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                                    canvas.before:
                                        Color:
                                            rgba: 1, 1, 1, 1
                                        RoundedRectangle:
                                            pos: self.pos
                                            size: self.size
                                            radius: [25, ]
                                            source: "assets/images/ma.jpg"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የማጅራት ገትር በሽታ"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "20sp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የማጅራት ገትር (inflammation of meninges) የአንጎል እና የአከርካሪ ገመድ መከላከያ ሽፋን ነው። ባክቴሪያ ፣ ቫይረሶች ፣ ፈንገሶች ወይም ጥገኛ ተህዋሲያን ሊከሰት ይችላል እና በፍጥነት ካልታከሙ ለሕይወት አስጊ ነው።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    bold: True
                                    font_size: "15dp"
                                    theme_text_color: "Secondary"
                                    halign: 'center'
                                    adaptive_height: True


                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "ምልክቶች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ምልክቶቹ በድንገት ሊፈጠሩ እና በፍጥነት ሊባባሱ ይችላሉ የተለመዱ ምልክቶች የሚከተሉትን ያካትታሉ:-\n\n"\
                                        "ከባድ ራስ ምታት።\n\n"\
                                        "የደነደነ አንገት (አንገትን ለማንቀሳቀስ አስቸጋሪ)።\n\n"\
                                        "ማቅለሽለሽ እና ማስታወክ።\n\n"\
                                        "ግራ መጋባት ወይም የማተኮር መቸገር።\n\n"\
                                        "የሚጥል በሽታ (ከባድ በሆኑ ጉዳዮች)።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"
                                
                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "በጨቅላ ህጻናት"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ከፍተኛ ትኩሳት።\n\n"\
                                        "የማያቋርጥ ማልቀስ።\n\n"\
                                        "ደካማ አመጋገብ።\n\n"\
                                        "በጭንቅላቱ ላይ የሚወዛወዝ ለስላሳ ቦታ (fontanelle)።\n\n"\
                                        "በሰውነት ውስጥ ግትርነት።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "መንስኤዎች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የቫይረስ ማጅራት ገትር።\n\n"\
                                        "የፈንገስ ገትር በሽታ።\n\n"\
                                        "ፓራሲቲክ የማጅራት ገትር በሽታ።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"



                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "መከላከል"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ክትባት ምርጥ መከላከያ። የማኒንጎኮካል ክትባት የሳንባ ምች ክትባት።\n\n"\
                                        "ጥሩ ንጽህና እጅን አዘውትሮ መታጠብ።\n\n"\
                                        "በበሽታ ከተያዙ ሰዎች ጋር የቅርብ ግንኙነትን ያስወግዱ።\n\n"\
                                        "ጤናማ የበሽታ መከላከል ስርዓት ትክክለኛ አመጋገብ እና እረፍት።\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "የማጅራት ገትር በሽታ ችግሮች"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "የማጅራት ገትር በሽታ ወደሚከተሉት ሊመራ ይችላል:-\n\n"\
                                        "የመስማት ችግር።\n\n"\
                                        "የሚጥል በሽታ።\n\n"\
                                        "የአንጎል ጉዳት።\n\n"\
                                        "ሞት (ካልታከመ)\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13sp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

                                MDCard:
                                    adaptive_height: True
                                    padding: "8dp"

                                    MDLabel:
                                        text: "በህክምና ባለሞያ መታየት"
                                        bold: True
                                        adaptive_height: True
                                        font_name: "assets/fonts/Abyssinica.ttf"
                                        font_size: "15dp"
                                        halign: "center"
                                        halign: "justify"

                                MDLabel:
                                    text:
                                        "\n"\
                                        "ድንገተኛ ከፍተኛ ትኩሳት እና ከባድ ራስ ምታት እና ደንዳና አንገት።\n\n"\
                                        "ግራ መጋባት ወይም ከእንቅልፍ ለመነሳት መቸገር።\n\n"\
                                        "የማጅራት ገትር በሽታ በፍጥነት ሊያድግ ይችላል ፣ ስለዚህ የቅድሚያ ህክምና ህይወትን ያድናል!!\n\n"
                                    font_name: "assets/fonts/Abyssinica.ttf"
                                    font_size: "13dp"
                                    adaptive_height: True
                                    theme_text_color: "Secondary"

