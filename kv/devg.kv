<DevgScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(5)
        padding: dp(10)

        # Header Section with Navigation Button
        MDBoxLayout:
            adaptive_height: True
            padding: '5dp'
            pos_hint: {"center_y": .99}

            MDIconButton:
                icon: "arrow-left"
                theme_text_color: "Secondary"
                user_font_size: "24sp"
                pos_hint: {"center_x": .1, "center_y": .5}
                on_release: app.switch_to_screen('dev')  # Screen switching here

        # Profile Card
        MDCard:
            size_hint: None, None
            size: "300dp", "350dp"
            elevation: 5
            radius: [20,]
            pos_hint: {"center_x": 0.5}
            #padding: dp(10)
            #md_bg_color: 1, 1, 1, 1  # White card background for contrast
            

            FloatLayout:
                FitImage:
                    source: "assets/dev/yesa.jpg"
                    size_hint: 1, 1
                    fit_mode: 'cover'
                    halign: "center"
                    pos_hint: {"center_x": 0.5, "y": 0.1}
                    #size_hint: None, None
                    elevation: 8
                    #padding: dp(10)
                    radius: [18,]

                       # Name Label
        
        MDLabel:
            text: "Y  I  S  H  A  K"
            bold: True
            halign: 'center'
            font_size: "20sp"
            size_hint_y: None
            height: dp(30)
            font_name: "assets/fonts/Tintsl.ttf"

        # Bio Section with Skills
        ScrollView:
            MDGridLayout:
                cols: 1
                adaptive_height: True
                padding: dp(12)
                spacing: dp(20)

                MDLabel:
                    text: "Hey Thereüëã, I'm Yishak Solomon, I'm a passionate mobile app developer with over two years of experience specializing in Flutter and FlutterFlow"
                    font_name: "assets/fonts/Abyssinica.ttf"
                    font_size: dp(14)
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "left"

                MDLabel:
                    text: "I create intuitive, high-performance applications that focus on delivering seamless user experiences. My expertise includes building scalable minimum viable products (MVPs) with clean architecture and modern design principles. I'm dedicated to bringing innovative ideas to life and continuously learning new technologies to stay ahead of the curve. Whether working on personal projects or collaborating with clients"
                    font_name: "assets/fonts/Abyssinica.ttf"
                    font_size: dp(14)
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "left"
                
                MDLabel:
                    text: "I aim to make a meaningful impact through technology that enhances both functionality and social value. Let's build the future together!"
                    font_name: "assets/fonts/Abyssinica.ttf"
                    font_size: dp(14)
                    size_hint_y: None
                    height: self.texture_size[1]
                    halign: "left"

                
        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            spacing: dp(12)
            padding: dp(16), dp(10)
            pos_hint: {"center_x": 0.5}

            MDRaisedButton:
                text: "üåê Visit My Portfolio"
                icon: "web"
                #md_bg_color: 0.2, 0.6, 0.86, 1
                #text_color: 1, 1, 1, 1
                size_hint_x: 0.8
                pos_hint: {"center_x": 0.5}
                elevation: 2
                on_release: root.open_url("https://yishak-portfolio.web.app/")

            MDBoxLayout:
                orientation: 'horizontal'
                adaptive_height: True
                spacing: dp(16)
                pos_hint: {"center_x": 0.5}

                MDIconButton:
                    icon: "linkedin"
                    user_font_size: "24sp"
                    on_release: root.open_url("https://www.linkedin.com/in/yisehak-solomon-774899287/")
                MDIconButton:
                    icon: "github"
                    user_font_size: "24sp"
                    on_release: root.open_url("https://yishak-portfolio.web.app/")
                MDIconButton:
                    icon: "twitter"
                    user_font_size: "24sp"
                    on_release: root.open_url("https://x.com/Yishak_s?s=3")